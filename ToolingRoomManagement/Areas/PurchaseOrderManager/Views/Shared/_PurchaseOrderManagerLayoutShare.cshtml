<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title - Purchase Order Manager</title>

    <!-- Favicons -->
    <link href="~/Areas/PurchaseOrderManager/Content/Image/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link href="~/Areas/PurchaseOrderManager/Content/vendor/Font/Rubik/stylesheet.css" rel="stylesheet" />

    <!-- Vendor CSS Files -->
    <link href="~/Areas/PurchaseOrderManager/Content/vendor/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/PurchaseOrderManager/Content/vendor/Bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Areas/PurchaseOrderManager/Content/vendor/SweetAlert/swal.min.css" rel="stylesheet" />
    <link href="~/Areas/PurchaseOrderManager/Content/vendor/Font-Awesome-640-Pro/css/all.css" rel="stylesheet" />
    <!-- Template Main CSS File -->
    <link href="~/Areas/PurchaseOrderManager/Content/template/NiceAdmin/css/style.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/PurchaseOrderManager/Content/Custom/AreasLayoutShared/StyleSheet.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body>
    @{
        var areaName = "";
        var controllerName = "";
        var actionName = "";
        ToolingRoomManagement.Areas.PurchaseOrderManager.User user = (ToolingRoomManagement.Areas.PurchaseOrderManager.User)Session["LoginUser"];
        try
        {

            areaName = ViewContext.RouteData.DataTokens["area"].ToString();
            controllerName = ViewContext.RouteData.Values["controller"].ToString();
            actionName = ViewContext.RouteData.Values["action"].ToString();
        }
        catch
        {
        }
    }

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="/Dashboard/Home/Home" class="logo d-flex align-items-center">
                <img src="~/Areas/PurchaseOrderManager/Content/Image/fii-logo.jpg" alt="logo" />
                <span class="d-none d-lg-block">Purchase Order Manager</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->
        <div class="header-nav d-flex ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@((user != null) ? (user.fullname) : "unknown")</span>
                    </a><!-- End Profile Iamge Icon -->
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6></h6>
                            <span></span>
                        </li> <!-- Name -->

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="">
                                <i class="bi bi-person"></i>
                                <span>Profile</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" onclick="">
                                <i class="bi bi-person"></i>
                                <span>Change Password</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Logout</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </div><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link @(controllerName.Contains("DashBoard") ? "" : "collapsed")" href="/PurchaseOrderManager/DashBoard/Index">
                    <i class="bi bi-house-fill"></i>
                    <span>Home</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(controllerName.Contains("Quotation") ? "" : "collapsed")" href="/PurchaseOrderManager/QuotationRequest/Home">
                    <i class="bi bi-card-checklist"></i>
                    <span>PR-PO Management</span>
                </a>
            </li>
        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">
        @RenderBody()
    </main><!-- End #main -->
    <!-- loader page -->
    <footer id="footer" class="footer fixed-bottom" style="background-color: #f5f5f536 !important; padding: 0 ">
        <div class="col-12 copyright">@DateTime.Now.Year &copy; MBD - Automation | <b>AIOT</b></div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- loader page -->
    <div id="loader-page" style="display: none">
        <img src="~/Areas/PurchaseOrderManager/Content/Image/Double-Ring-loading.gif" />
    </div><!-- end loader page -->
    <!-- Vendor JS Files -->
    <script src="~/Areas/PurchaseOrderManager/Content/vendor/Jquery/jquery-3.4.1.min.js"></script>
    <script src="~/Areas/PurchaseOrderManager/Content/vendor/Bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/PurchaseOrderManager/Content/vendor/SweetAlert/swal.min.js"></script>
    <!-- Template Main JS File -->
    <script src="~/Areas/PurchaseOrderManager/Content/template/NiceAdmin/js/main.js"></script>
    <!-- Custom -->
    @RenderSection("scripts", required: false)
</body>
</html>


