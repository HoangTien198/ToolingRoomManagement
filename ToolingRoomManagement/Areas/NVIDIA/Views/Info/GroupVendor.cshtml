
@{
    ViewBag.Title = "Group & Vendor";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->

    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/Info/css/GroupVendor.css" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Group & Vendor</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Infomation</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <!-- Group -->
    <div class="col-6">
        <!-- Card table -->
        <div class="card" id="card-Group">
            <div class="card-body">
                <div class="card-title d-flex align-items-center">
                    <h5 class="m-0 me-3">Group Details</h5>
                    <button class="btn btn-sm btn-outline-primary" id="btn-NewGroup"><i class="fa-solid fa-plus"></i> New Group</button>
                </div>
                <hr />
                <div class="form-body mt-4">
                    <table id="table_Group" class="table table-striped table-hover table-bordered text-nowrap">
                        <thead id="table_Group-head">
                            <tr>
                                <!-- 0 -->
                                <th>ID</th>
                                <!-- 1 -->
                                <th>Group Name</th>
                                <!-- 2 -->
                                <th>Total Devices</th>
                                <!-- 3 -->
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="table_Group-body">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Add & Edit modal -->
        <div class="modal fade" id="GroupModal-modal" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="GroupModal-HeadTitle"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h2 class="font-weight-light text-center text-primary py-3" id="GroupModal-BodyTitle"></h2>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Group Name</label>
                            <input type="text" class="form-control" id="Group-GroupName" maxlength="50" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="GroupModal-button_send">Save</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details modal -->
        <div class="modal fade" id="GroupDetails-modal" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="GroupDetails-HeadTitle">Group Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h5 class="font-weight-light text-center text-primary py-3" id="GroupDetails-BodyTitle">Group Infomation</h5>
                        <div class="col-md-12">
                            <label class="form-label">Group Name</label>
                            <input type="text" class="form-control" id="GroupDetails-GroupName" maxlength="50" disabled />
                        </div>
                        <h5 class="font-weight-light text-center text-primary py-3">Devices In Group</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr style="background-color: #3e464c">
                                    <td>No.</td>
                                    <td>PN</td>
                                    <td>Description</td>
                                    <td>Specification</td>
                                    <td>Model</td>
                                    <td>Station</td>
                                    <td>Quantity</td>
                                    <td>Unit</td>
                                    <td>Type</td>
                                    <td>Status</td>
                                </tr>
                            </thead>
                            <tbody id="table_GroupDetails-body">
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vendor -->
    <div class="col-6">
        <!-- Card table -->
        <div class="card" id="card-Vendor">
            <div class="card-body">
                <div class="card-title d-flex align-items-center">
                    <h5 class="m-0 me-3">Vendor Details</h5>
                    <button class="btn btn-sm btn-outline-primary" id="btn-NewVendor"><i class="fa-solid fa-plus"></i> New Vendor</button>
                </div>
                <hr />
                <div class="form-body mt-4">
                    <table id="table_Vendor" class="table table-striped table-hover table-bordered text-nowrap">
                        <thead id="table_Vendor-head">
                            <tr>
                                <!-- 0 -->
                                <th>ID</th>
                                <!-- 1 -->
                                <th>Vendor Name</th>
                                <!-- 2 -->
                                <th>Total Devices</th>
                                <!-- 3 -->
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="table_Vendor-body">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Add & Edit modal -->
        <div class="modal fade" id="VendorModal-modal" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="VendorModal-HeadTitle"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h2 class="font-weight-light text-center text-primary py-3" id="VendorModal-BodyTitle"></h2>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Vendor Name</label>
                            <input type="text" class="form-control" id="Vendor-VendorName" maxlength="50" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="VendorModal-button_send">Save</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details modal -->
        <div class="modal fade" id="VendorDetails-modal" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="VendorDetails-HeadTitle">Vendor Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h5 class="font-weight-light text-center text-primary py-3" id="VendorDetails-BodyTitle">Vendor Infomation</h5>
                        <div class="col-md-12">
                            <label class="form-label">Vendor Name</label>
                            <input type="text" class="form-control" id="VendorDetails-VendorName" maxlength="50" disabled />
                        </div>
                        <h5 class="font-weight-light text-center text-primary py-3">Devices In Vendor</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr style="background-color: #3e464c">
                                    <td>No.</td>
                                    <td>PN</td>
                                    <td>Description</td>
                                    <td>Specification</td>
                                    <td>Model</td>
                                    <td>Station</td>
                                    <td>Quantity</td>
                                    <td>Unit</td>
                                    <td>Type</td>
                                    <td>Status</td>
                                </tr>
                            </thead>
                            <tbody id="table_VendorDetails-body">
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->

    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/Info/js/GroupVendor.js"></script>
}