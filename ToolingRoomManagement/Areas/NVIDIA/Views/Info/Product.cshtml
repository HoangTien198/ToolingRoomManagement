
@{
    ViewBag.Title = "Product Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->

    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/Info/css/product.css?v=@Guid.NewGuid()" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Product</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Infomation</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Card table -->
<div class="card" id="card-product">
    <div class="card-body">
        <div class="card-title d-flex align-items-center">
            <h5 class="m-0 me-3">Product Details</h5>
            <button class="btn btn-sm btn-outline-primary" id="btn-NewProduct"><i class="fa-solid fa-plus"></i> New Product</button>
        </div>
        <hr />
        <div class="form-body mt-4">
            <table id="table_Products" class="table table-striped table-hover table-bordered text-nowrap">
                <thead id="table_Products-head">
                    <tr>
                        <!-- 0 -->
                        <th>ID</th>
                        <!-- 1 -->
                        <th>MTS</th>
                        <!-- 2 -->
                        <th>Product Name</th>
                        <!-- 4 -->
                        <th>Total Devices</th>
                        <!-- 5 -->
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="table_Products-body">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add & Edit modal -->
<div class="modal fade" id="product-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Modal-HeadTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2 class="font-weight-light text-center text-primary py-3" id="Modal-BodyTitle"></h2>
                <div class="row">
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">MTS</label>
                            <input type="text" class="form-control" id="p-MTS" maxlength="25">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="p-ProductName" maxlength="255" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button_send">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Details modal -->
<div class="modal fade" id="details-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="details-HeadTitle">Product Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 class="font-weight-light text-center text-primary py-3" id="details-BodyTitle">Product Infomation</h5>
                <div class="row">
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">MTS</label>
                            <input type="text" class="form-control" id="details-MTS" maxlength="25" disabled>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="details-ProductName" maxlength="255" disabled/>
                        </div>
                    </div>
                </div>
                <h5 class="font-weight-light text-center text-primary py-3" id="details-BodyTitle">Devices In Product</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr style="background-color: #3e464c">
                            <td>No.</td>
                            <td>PN</td>
                            <td>Description</td>
                            <td>Specification</td>
                            <td>Model</td>
                            <td>Station</td>
                            <td>Quantity</td>
                            <td>Unit</td>
                            <td>Type</td>
                            <td>Status</td>
                        </tr>
                    </thead>
                    <tbody id="table_details-body">

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->

    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/Info/js/product.js?v=@Guid.NewGuid()"></script>
}