
@{
    ViewBag.Title = "ModelStation";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/Info/css/ModelStation.css" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Model & Station</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Infomation</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <!-- Model -->
    <div class="col-6">
        <!-- Card table -->
        <div class="card" id="card-model">
            <div class="card-body">
                <div class="card-title d-flex align-items-center">
                    <h5 class="m-0 me-3">Model Details</h5>
                    <button class="btn btn-sm btn-outline-primary" id="btn-NewModel"><i class="fa-solid fa-plus"></i> New Model</button>
                </div>
                <hr />
                <div class="form-body mt-4">
                    <table id="table_Model" class="table table-striped table-hover table-bordered text-nowrap">
                        <thead id="table_Model-head">
                            <tr>
                                <!-- 0 -->
                                <th>ID</th>
                                <!-- 1 -->
                                <th>Model Name</th>
                                <!-- 2 -->
                                <th>Total Devices</th>
                                <!-- 3 -->
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="table_Model-body">


                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Add & Edit modal -->
        <div class="modal fade" id="ModelModal-modal" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModelModal-HeadTitle"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h2 class="font-weight-light text-center text-primary py-3" id="ModelModal-BodyTitle"></h2>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Model Name</label>
                            <input type="text" class="form-control" id="Model-ModelName" maxlength="50" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="ModelModal-button_send">Save</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details modal -->
        <div class="modal fade" id="ModelDetails-modal" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModelDetails-HeadTitle">Model Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h5 class="font-weight-light text-center text-primary py-3" id="ModelDetails-BodyTitle">Model Infomation</h5>
                        <div class="col-md-12">
                            <label class="form-label">Model Name</label>
                            <input type="text" class="form-control" id="ModelDetails-ModelName" maxlength="50" disabled />
                        </div>
                        <h5 class="font-weight-light text-center text-primary py-3">Devices In Model</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr style="background-color: #3e464c">
                                    <td>No.</td>
                                    <td>PN</td>
                                    <td>Description</td>
                                    <td>Specification</td>
                                    <td>Model</td>
                                    <td>Station</td>
                                    <td>Quantity</td>
                                    <td>Unit</td>
                                    <td>Type</td>
                                    <td>Status</td>
                                </tr>
                            </thead>
                            <tbody id="table_ModelDetails-body">
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Station -->
    <div class="col-6">
        <!-- Card table -->
        <div class="card" id="card-station">
            <div class="card-body">
                <div class="card-title d-flex align-items-center">
                    <h5 class="m-0 me-3">Station Details</h5>
                    <button class="btn btn-sm btn-outline-primary" id="btn-NewStation"><i class="fa-solid fa-plus"></i> New Station</button>
                </div>
                <hr />
                <div class="form-body mt-4">
                    <table id="table_Station" class="table table-striped table-hover table-bordered text-nowrap">
                        <thead id="table_Station-head">
                            <tr>
                                <!-- 0 -->
                                <th>ID</th>
                                <!-- 1 -->
                                <th>Station Name</th>
                                <!-- 2 -->
                                <th>Total Devices</th>
                                <!-- 3 -->
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="table_Station-body">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Add & Edit modal -->
        <div class="modal fade" id="StationModal-modal" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="StationModal-HeadTitle"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h2 class="font-weight-light text-center text-primary py-3" id="StationModal-BodyTitle"></h2>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Station Name</label>
                            <input type="text" class="form-control" id="Station-StationName" maxlength="50" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="StationModal-button_send">Save</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details modal -->
        <div class="modal fade" id="StationDetails-modal" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="StationDetails-HeadTitle">Station Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h5 class="font-weight-light text-center text-primary py-3" id="StationDetails-BodyTitle">Station Infomation</h5>
                        <div class="col-md-12">
                            <label class="form-label">Station Name</label>
                            <input type="text" class="form-control" id="StationDetails-StationName" maxlength="50" disabled />
                        </div>
                        <h5 class="font-weight-light text-center text-primary py-3">Devices In Station</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr style="background-color: #3e464c">
                                    <td>No.</td>
                                    <td>PN</td>
                                    <td>Description</td>
                                    <td>Specification</td>
                                    <td>Model</td>
                                    <td>Station</td>
                                    <td>Quantity</td>
                                    <td>Unit</td>
                                    <td>Type</td>
                                    <td>Status</td>
                                </tr>
                            </thead>
                            <tbody id="table_StationDetails-body">
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/Info/js/ModelStation.js"></script>
}