
@{
    ViewBag.Title = "ReturnDevice";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Vendor/DataTables/DataTables-1.13.4/css/select.dataTables.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2-bootstrap4.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Vendor/Viewer JS/viewer.min.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/ReturnDevice/ReturnNG.css" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Return NG</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a></li>
                <li class="breadcrumb-item" aria-current="page">Device</li>
                <li class="breadcrumb-item" aria-current="page">Return & Shipping</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Card table -->
<div class="card" id="card-device-details">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <h5 class="m-0 me-3">NG Devices</h5>
            </div>

            <div class="w-50 d-flex justify-content-end">
                <div class="input-group input-group-sm w-50">
                    <span class="col-5 input-group-text">Warehouse</span>
                    <select class="col-7 form-select form-select-sm" id="select-WareHouse"></select>
                </div>

                @Html.Partial("~/Areas/NVIDIA/Views/DeviceManagement/_DatatableFilter.cshtml")
            </div>
        </div>

        <hr />
        <div class="form-body mt-4">
            <table id="datatable" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <!-- 0 -->
                        <th>ID</th>
                        <!-- 1 -->
                        <th>MTS</th>
                        <!-- 2 -->
                        <th>PN</th>
                        <!-- 3 -->
                        <th>Description</th>
                        <!-- 4 -->
                        <th>Location</th>
                        <!-- 5 -->
                        <th>Buffer</th>
                        <!-- 6 -->
                        <th>Quantity</th>
                        <!-- 7 -->
                        <th>Unit</th>
                        <!-- 8 -->
                        <th>Lead Time</th>
                        <!-- 9 -->
                        <th> Type</th>
                        <!-- 10 -->
                        <th>Status</th>
                        <!-- 11 -->
                        <th>Action</th>
                        <!-- 12 -->
                        <th>IsConsign</th>
                    </tr>
                </thead>
                <tbody id="datatable-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Return device modal-->
<div class="modal fade" id="modal-AddReturnDevice" aria-hidden="true" data-bs-focus="false">
    <div class="modal-dialog modal-fullscreen modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" style="text-transform:uppercase;">Return NG Device</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <table id="datatable_add" class="table table-striped table-hover table-bordered text-nowrap w-100">
                    <thead>
                        <tr>
                            <!-- 0 -->
                            <th></th>
                            <!-- 1 -->
                            <th>ID</th>
                            <!-- 2 -->
                            <th>MTS</th>
                            <!-- 3 -->
                            <th>PN</th>
                            <!-- 4 -->
                            <th>Description</th>
                            <!-- 5 -->
                            <th>Location</th>
                            <!-- 6 -->
                            <th>Buffer</th>
                            <!-- 7 -->
                            <th>Quantity</th>
                            <!-- 8 -->
                            <th>Real Quantity</th>
                            <!-- 9 -->
                            <th>Unit</th>
                            <!-- 10 -->
                            <th>Lead Time</th>
                            <!-- 11 -->
                            <th> Type</th>
                            <!-- 12 -->
                            <th>Status</th>
                            <!-- 13 -->
                            <th>Action</th>
                            <!-- 14 -->
                            <th>IsConsign</th>
                            <!-- 15 -->
                            <th>Alternative PN</th>
                        </tr>
                    </thead>
                    <tbody id="datatable_add-tbody">
                    </tbody>
                </table>
            </div>

            <div class="modal-footer p-1">
                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-sm btn-primary" id="btn-AddReturnDevice">Return NG</button>
            </div>
        </div>
    </div>
</div>

<!-- Device details -->
@Html.Partial("~/Areas/NVIDIA/Views/DeviceManagement/_DeviceDetails_Modal.cshtml")

<!-- Borrow Form modal -->
<div class="modal fade" id="modal-ReturnDevice" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Take Device Request Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2 class="font-weight-light text-center text-primary py-3">TAKE DEVICE REQUEST</h2>

                <div class="row">
                    <!-- row 1-->
                    <div class="col-md-3">
                        <label class="form-label">Card Id</label>
                        <input type="text" class="form-control" id="form_borrow-CardId" disabled>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control" id="form_borrow-Username" disabled>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date Take Device</label>
                        <input type="datetime-local" class="form-control" id="form_borrow-BorrowDate">
                    </div>
                    <!-- row 2-->
                    <div class="col-md-3 mt-3">
                        <label class="form-label">Use for Model</label>
                        <input type="text" class="form-control" id="form_borrow-Model" list="form_borrow-ListModel" />
                        <datalist id="form_borrow-ListModel"></datalist>
                    </div>
                    <div class="col-md-3 mt-3">
                        <label class="form-label">Use for Station</label>
                        <input type="text" class="form-control" id="form_borrow-Station" list="form_borrow-ListStation" />
                        <datalist id="form_borrow-ListStation"></datalist>
                    </div>
                    <!-- row 3-->
                    <div class="col-md-12 mt-3">
                        <label class="form-label">Note</label>
                        <textarea class="form-control" rows="3" style="resize: none" id="form_borrow-Note"></textarea>
                    </div>
                </div>

                <div class="mt-3">
                    <h4 class="font-weight-light text-center text-white py-3">DEVICES LIST</h4>
                    <table class="table table-bordered" id="table_borrow">
                        <thead>
                            <tr>
                                <th>PN</th>
                                <th>Description</th>
                                <th>Specification</th>
                                <th class="text-center">Unit</th>
                                <th class="text-danger text-center" style="width: 200px;">Quantity</th>
                            </tr>
                        </thead>
                        <tbody id="table_borrow-tbody">
                        </tbody>
                    </table>
                </div>

                <div class="container py-2">
                    <h4 class="font-weight-light text-center text-white py-3">SIGN PROCESS</h4>
                    <div id="sign-container">
                        <div class="row">
                            <!-- timeline item 1 left dot -->
                            <div class="col-auto text-center flex-column d-none d-sm-flex">
                                <div class="row h-50">
                                    <div class="col border-end">&nbsp;</div>
                                    <div class="col">&nbsp;</div>
                                </div>
                                <h5 class="m-2">
                                    <span class="badge rounded-pill bg-primary border">&nbsp;</span>
                                </h5>
                                <div class="row h-50">
                                    <div class="col">&nbsp;</div>
                                    <div class="col" style="padding-right: 14px;">&nbsp;</div>
                                </div>
                            </div>
                            <!-- timeline item 1 event content -->
                            <div class="col py-2">
                                <div class="card radius-15 card-sign">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <label class="form-label">Role</label>
                                                <input type="text" class="form-control form-control" value="Warehouse Manager" disabled>
                                            </div>
                                            <div class="col-md-7">
                                                <label class="form-label">User</label>
                                                <select class="form-select form-select" id="sign-WarehouseManagerUser" select-user></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center" btn-add-sign>
                        <button type="button" class="btn btn-outline-success px-5 border-0" id="btn_addSign"><i class="bx bx-plus"></i>New Sign</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button_send">Send Take Form</button>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Vendor/DataTables/DataTables-1.13.4/js/dataTables.select.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Vendor/MomentJs/moment.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/js/select2.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Vendor/Viewer JS/viewer.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/ReturnDevice/ReturnNG.js"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/DeviceManagement/js/DeviceDetails.js?v=@Guid.NewGuid()"></script>
}

