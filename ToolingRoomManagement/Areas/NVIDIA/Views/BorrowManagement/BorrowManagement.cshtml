@{
    ViewBag.Title = "Borrow Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/BorrowManagement/css/BorrowManagement.css?v=@Guid.NewGuid()" rel="stylesheet" />
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Management</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Request Handling</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row row-cols-1 row-cols-lg-4">
    <!-- Total Requests -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Total Request</p>
                        <h4 class="font-weight-bold" id="info-request"></h4>
                    </div>
                    <div class="widgets-icons bg-gradient-cosmic text-white">
                        <i class="bx bx-transfer-alt"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pending -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Pending</p>
                        <h4 class="font-weight-bold" id="info-pending"></h4>
                    </div>
                    <div class="widgets-icons bg-gradient-kyoto text-white">
                        <i class='bx bx-time'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Approved -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Approved</p>
                        <h4 class="font-weight-bold" id="info-approved"></h4>
                    </div>
                    <div class="widgets-icons bg-gradient-lush text-white">
                        <i class='bx bx-check'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Reject -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Rejected</p>
                        <h4 class="font-weight-bold" id="info-rejected"></h4>
                    </div>
                    <div class="widgets-icons bg-gradient-burning text-white">
                        <i class='bx bx-x'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Card table -->
<div class="card card-info" id="card-device-details">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <h5 class="m-0">Details</h5>
        </div>
        <hr />
        <div class="form-body mt-4">
            <table id="table_Borrows" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th>Due Date</th>
                        <th>Return Date</th>
                        <th>Note</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="table_Borrows-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Borrow Request modal -->
<div class="modal fade" id="borrow_modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="borrow_modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">BORROW REQUEST</h2>

                <div class="row">
                    <div class="col-md-2">
                        <label class="form-label">Card Id</label>
                        <input type="text" class="form-control form-control-sm" id="borrow_modal-CardId" disabled>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control form-control-sm" id="borrow_modal-Username" disabled>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Used for Model</label>
                        <input type="text" class="form-control form-control-sm" id="borrow_modal-Model" disabled>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Used for Station</label>
                        <input type="text" class="form-control form-control-sm" id="borrow_modal-Station" disabled>
                    </div>

                    <div class="col-md-4 mt-3">
                        <label class="form-label" typeName>Date Borrow</label>
                        <input type="datetime-local" class="form-control form-control-sm" id="borrow_modal-BorrowDate" disabled>
                    </div>
                    <div class="col-md-4 mt-3" checkType>
                        <label class="form-label">Due Date</label>
                        <input type="datetime-local" class="form-control form-control-sm" id="borrow_modal-DuaDate" disabled>
                    </div>
                    <div class="col-md-4 mt-3" checkType>
                        <label class="form-label">Return Date</label>
                        <input type="datetime-local" class="form-control form-control-sm" id="borrow_modal-ReturnDate" disabled>
                    </div>
                    <div class="col-md-12 mt-3">
                        <label class="form-label">Note</label>
                        <div class="form-control" rows="3" id="borrow_modal-Note"><p></p></div>
                    </div>
                </div>

                <div class="mt-3">
                    <h4 class="font-weight-light text-center text-white py-3">DEVICES LIST</h4>
                    <table class="table table-bordered" id="borrow_modal-table">
                        <thead>
                            <tr>
                                <th style="min-width: 120px;">PN</th>
                                <th>Description</th>
                                <th>Specification</th>
                                <th>Model</th>
                                <th>Station</th>
                                <th class="text-center">Unit</th>
                                <th class="text-danger text-center" style="width: 200px;">Quantity</th>
                            </tr>
                        </thead>
                        <tbody id="borrow_modal-table-tbody">
                        </tbody>
                    </table>
                </div>

                <div class="container py-2" id="sign-container">
                    <h4 class="font-weight-light text-center text-white py-3">SIGN PROCESS</h4>
                   
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Vendor/MomentJs/moment.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/BorrowManagement/js/BorrowManagement.js?v=@Guid.NewGuid()"></script>
}