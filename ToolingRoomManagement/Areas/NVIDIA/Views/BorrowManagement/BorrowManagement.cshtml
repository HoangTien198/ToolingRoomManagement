@{
    ViewBag.Title = "Borrow Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/BorrowManagement/css/BorrowManagement.css" rel="stylesheet" />
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Management</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard/Index"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Borrow - Return</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row row-cols-1 row-cols-lg-4">
    <!-- Total Requests -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Total Request</p>
                        <h4 class="font-weight-bold" id="info-request"></h4>
                        <p class="text-secondary mb-0 font-13">Analysis for this week / last week</p>
                    </div>
                    <div class="widgets-icons bg-gradient-cosmic text-white">
                        <i class="bx bx-transfer-alt"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pending -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Pending</p>
                        <h4 class="font-weight-bold" id="info-pending"></h4>
                        <p class="text-secondary mb-0 font-13">Analysis for this week / last week</p>
                    </div>
                    <div class="widgets-icons bg-gradient-kyoto text-white">
                        <i class='bx bx-time'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Approved -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Approved</p>
                        <h4 class="font-weight-bold" id="info-approved"></h4>
                        <p class="text-secondary mb-0 font-13">Analysis for this week / last week</p>
                    </div>
                    <div class="widgets-icons bg-gradient-lush text-white">
                        <i class='bx bx-check'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Reject -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Rejected</p>
                        <h4 class="font-weight-bold" id="info-rejected"></h4>
                        <p class="text-secondary mb-0 font-13">Analysis for this week / last week</p>
                    </div>
                    <div class="widgets-icons bg-gradient-burning text-white">
                        <i class='bx bx-x'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Card table -->
<div class="card card-info" id="card-device-details">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <h5 class="m-0">Details</h5>
        </div>
        <hr />
        <div class="form-body mt-4">
            <table id="table_Borrows" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Due Date</th>
                        <th>Return Date</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="table_Borrows-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Borrow Request modal -->
<div class="modal fade" id="borrow_modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Borrow Request Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2 class="font-weight-light text-center text-primary py-3">BORROW REQUEST</h2>

                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label">Card Id</label>
                        <input type="text" class="form-control" id="borrow_modal-CardId" disabled>
                    </div>
                    <div class="col-md-8">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control" id="borrow_modal-Username" disabled>
                    </div>
                    <div class="col-md-4 mt-3">
                        <label class="form-label">Date Borrow</label>
                        <input type="datetime-local" class="form-control" id="borrow_modal-BorrowDate" disabled>
                    </div>
                    <div class="col-md-4 mt-3">
                        <label class="form-label">Due Date</label>
                        <input type="datetime-local" class="form-control" id="borrow_modal-DuaDate" disabled>
                    </div>
                    <div class="col-md-4 mt-3">
                        <label class="form-label">Return Date</label>
                        <input type="datetime-local" class="form-control" id="borrow_modal-ReturnDate" disabled>
                    </div>
                    <div class="col-md-12 mt-3">
                        <label class="form-label">Note</label>
                        <div class="form-control" rows="3" id="borrow_modal-Note" ><p></p></div>
                    </div>
                </div>

                <div class="mt-3">
                    <h4 class="font-weight-light text-center text-white py-3">DEVICES LIST</h4>
                    <table class="table table-bordered" id="borrow_modal-table">
                        <thead>
                            <tr>
                                <th style="min-width: 120px;">Device Code</th>
                                <th>Device Name</th>
                                <th>Model</th>
                                <th>Station</th>
                                <th class="text-danger text-center" style="width: 200px;">Quantity Borrow</th>
                            </tr>
                        </thead>
                        <tbody id="borrow_modal-table-tbody">
                        </tbody>
                    </table>
                </div>

                <div class="container py-2">
                    <h4 class="font-weight-light text-center text-white py-3">SIGN PROCESS</h4>
                    <!-- timeline item 2 -->
                    <div class="row">
                        <div class="col-auto text-center flex-column d-none d-sm-flex">
                            <div class="row h-50">
                                <div class="col">&nbsp;</div>
                                <div class="col">&nbsp;</div>
                            </div>
                            <h5 class="m-2">
                                <span class="badge rounded-pill bg-warning">&nbsp;</span>
                            </h5>
                            <div class="row h-50">
                                <div class="col border-end">&nbsp;</div>
                                <div class="col">&nbsp;</div>
                            </div>
                        </div>
                        <div class="col py-2">
                            <div class="card border-primary shadow radius-15 bg-light-warning">
                                <div class="card-body">
                                    <div class="float-end">Tue, Jan 10th 2019 8:30 AM</div>
                                    <h5 class="card-title">Day 2 Sessions</h5>
                                    <p class="card-text">Sign-up for the lessons and speakers that coincide with your course syllabus. Meet and greet with instructors.</p>
                                    <button class="btn btn-sm btn-outline-secondary collapsed" type="button" data-bs-target="#t2_details" data-bs-toggle="collapse" aria-expanded="false">Show Details ▼</button>
                                    <div class="border collapse" id="t2_details" style="">
                                        <div class="p-2 text-monospace">
                                            <div>08:30 - 09:00 Breakfast in CR 2A</div>
                                            <div>09:00 - 10:30 Live sessions in CR 3</div>
                                            <div>10:30 - 10:45 Break</div>
                                            <div>10:45 - 12:00 Live sessions in CR 3</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/row-->
                    <!-- timeline item 3 -->
                    <div class="row">
                        <div class="col-auto text-center flex-column d-none d-sm-flex">
                            <div class="row h-50">
                                <div class="col border-end">&nbsp;</div>
                                <div class="col">&nbsp;</div>
                            </div>
                            <h5 class="m-2">
                                <span class="badge rounded-pill bg-light border">&nbsp;</span>
                            </h5>
                            <div class="row h-50">
                                <div class="col border-end">&nbsp;</div>
                                <div class="col">&nbsp;</div>
                            </div>
                        </div>
                        <div class="col py-2">
                            <div class="card radius-15">
                                <div class="card-body">
                                    <div class="float-end text-muted">Wed, Jan 11th 2019 8:30 AM</div>
                                    <h4 class="card-title">Day 3 Sessions</h4>
                                    <p>Shoreditch vegan artisan Helvetica. Tattooed Codeply Echo Park Godard kogi, next level irony ennui twee squid fap selvage. Meggings flannel Brooklyn literally small batch, mumblecore PBR try-hard kale chips. Brooklyn vinyl lumbersexual bicycle rights, viral fap cronut leggings squid chillwave pickled gentrify mustache. 3 wolf moon hashtag church-key Odd Future. Austin messenger bag normcore, Helvetica Williamsburg sartorial tote bag distillery Portland before they sold out gastropub taxidermy Vice.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/row-->
                    <!-- timeline item 4 -->
                    <div class="row">
                        <div class="col-auto text-center flex-column d-none d-sm-flex">
                            <div class="row h-50">
                                <div class="col border-end">&nbsp;</div>
                                <div class="col">&nbsp;</div>
                            </div>
                            <h5 class="m-2">
                                <span class="badge rounded-pill bg-light border">&nbsp;</span>
                            </h5>
                            <div class="row h-50">
                                <div class="col">&nbsp;</div>
                                <div class="col">&nbsp;</div>
                            </div>
                        </div>
                        <div class="col py-2">
                            <div class="card radius-15">
                                <div class="card-body">
                                    <div class="float-end text-muted">Thu, Jan 12th 2019 11:30 AM</div>
                                    <h4 class="card-title">Day 4 Wrap-up</h4>
                                    <p>Join us for lunch in Bootsy's cafe across from the Campus Center.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/row-->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button_send">Send Borrow Form</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    @*<script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>*@
    <script src="~/Areas/NVIDIA/Content/Vendor/MomentJs/moment.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/BorrowManagement/js/BorrowManagement.js"></script>
}