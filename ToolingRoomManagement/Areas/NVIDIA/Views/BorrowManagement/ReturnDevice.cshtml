@{
    ViewBag.Title = "Return";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/BorrowManagement/css/ReturnDevice.css?v=@Guid.NewGuid()" rel="stylesheet" />
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Return </div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="javascript:;">Request Handling</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Request</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Card table -->
<div class="card card-info" id="card-device-details">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <h5 class="m-0">Select Borrow Requests to return device</h5>
        </div>
        <hr />
        <div class="form-body mt-4">
            <table id="table_Borrows" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th>Due Date</th>
                        <th>Total Quantity</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="table_Borrows-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Borrow Request modal -->
<div class="modal fade" id="borrow_modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="borrow_modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">BORROW REQUEST</h2>

                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label">Card Id</label>
                        <input type="text" class="form-control form-control-sm" id="borrow_modal-CardId" disabled>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control form-control-sm" id="borrow_modal-Username" disabled>
                    </div>
                    <div class="col-md-4"></div>

                    <div class="col-md-4 mt-3">
                        <label class="form-label">Used for Model</label>
                        <input type="text" class="form-control form-control-sm" id="borrow_modal-Model" disabled>
                    </div>
                    <div class="col-md-4 mt-3">
                        <label class="form-label">Used for Station</label>
                        <input type="text" class="form-control form-control-sm" id="borrow_modal-Station" disabled>
                    </div>
                    <div class="col-md-4 mt-3"></div>

                    <div class="col-md-4 mt-3">
                        <label class="form-label">Date Borrow</label>
                        <input type="datetime-local" class="form-control form-control-sm" id="borrow_modal-BorrowDate" disabled>
                    </div>
                    <div class="col-md-4 mt-3">
                        <label class="form-label">Due Date</label>
                        <input type="datetime-local" class="form-control form-control-sm" id="borrow_modal-DuaDate" disabled>
                    </div>
                    <div class="col-md-4 mt-3">
                        <label class="form-label">Return Date</label>
                        <input type="datetime-local" class="form-control form-control-sm" id="borrow_modal-ReturnDate" disabled>
                    </div>
                    <div class="col-md-12 mt-3">
                        <label class="form-label">Note</label>
                        <div class="form-control" rows="3" id="borrow_modal-Note"><p></p></div>
                    </div>
                </div>

                <div class="mt-3">
                    <h4 class="font-weight-light text-center text-white py-3">DEVICES LIST</h4>
                    <table class="table table-bordered" id="borrow_modal-table">
                        <thead>
                            <tr>
                                <th style="min-width: 120px;">Device Code</th>
                                <th>Device Name</th>
                                <th>Model</th>
                                <th>Station</th>
                                <th class="text-danger text-center" style="width: 200px;">Quantity Borrow</th>
                            </tr>
                        </thead>
                        <tbody id="borrow_modal-table-tbody">
                        </tbody>
                    </table>
                </div>

                <div class="container py-2" id="sign-container">
                    <h4 class="font-weight-light text-center text-white py-3">SIGN PROCESS</h4>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="ReturnButton" data-bs-dismiss="modal">Return</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>

    <script src="~/Areas/NVIDIA/Content/Vendor/MomentJs/moment.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/BorrowManagement/js/ReturnDevice.js?v=@Guid.NewGuid()"></script>
}