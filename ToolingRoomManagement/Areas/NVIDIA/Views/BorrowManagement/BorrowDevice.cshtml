@{
    ViewBag.Title = "Borrow";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2-bootstrap4.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/BorrowManagement/css/BorrowDevice.css?v=@Guid.NewGuid()" rel="stylesheet" />
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Borrow </div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="javascript:;">Request Handling</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Request</li>
            </ol>
        </nav>
    </div>
</div>


<div class="row">
    <div class="col-8">
        <!-- Card table -->
        <div class="card" id="card-device-details">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between align-items-center">
                    <h5 class="m-0">Devices</h5>
                    <div class="w-50 d-flex justify-content-end">
                        <div class="input-group input-group-sm w-75">
                            <span class="col-5 input-group-text">Warehouse</span>
                            <select class="col-7 form-select" id="input_WareHouse"></select>
                        </div>
                        <div class="dropdown ms-3" id="dropdown_filter">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Filter"><i class="bx bx-filter"></i></button>
                            <div class="dropdown-menu" style="width:600px;">
                                <div class="row">
                                    <div class="col-6">
                                        <!--Filter product -->
                                        <div class="input-group input-group-sm mb-3">
                                            <span class="col-3 input-group-text">Product</span>
                                            <select class="form-select form-select-sm" id="filter_Product">
                                                <option value="" selected>Product (All)</option>
                                            </select>
                                        </div>
                                        <!--Filter model -->
                                        <div class="input-group input-group-sm mb-3">
                                            <span class="col-3 input-group-text">Model</span>
                                            <select class="form-select form-select-sm" id="filter_Model">
                                                <option value="" selected>Model (All)</option>
                                            </select>
                                        </div>
                                        <!--Filter station -->
                                        <div class="input-group input-group-sm mb-3">
                                            <span class="col-3 input-group-text">Station</span>
                                            <select class="form-select form-select-sm" id="filter_Station">
                                                <option value="" selected>Station (All)</option>
                                            </select>
                                        </div>
                                        <!--Filter group -->
                                        <div class="input-group input-group-sm mb-3">
                                            <span class="col-3 input-group-text">Group</span>
                                            <select class="form-select form-select-sm" id="filter_Group">
                                                <option value="" selected>Group (All)</option>
                                            </select>
                                        </div>

                                    </div>
                                    <div class="col-6">
                                        <!--Filter Vendor -->
                                        <div class="input-group input-group-sm mb-3">
                                            <span class="col-3 input-group-text">Vendor</span>
                                            <select class="form-select form-select-sm" id="filter_Vendor">
                                                <option value="" selected>Vendor (All)</option>
                                            </select>
                                        </div>
                                        <!--Filter Type -->
                                        <div class="input-group input-group-sm mb-3">
                                            <span class="col-3 input-group-text">Type</span>
                                            <select class="form-select form-select-sm" id="filter_Type">
                                                <option value="Type" selected>Type (All)</option>
                                                <option value="N/A">N/A </option>
                                                <option value="Static">Static</option>
                                                <option value="Dynamic">Dynamic</option>
                                                <option value="Consign">Consign</option>
                                                <option value="Fixture">Fixture</option>
                                            </select>
                                        </div>
                                        <!--Filter Status -->
                                        <div class="input-group input-group-sm mb-3">
                                            <span class="col-3 input-group-text">Status</span>
                                            <select class="form-select form-select-sm" id="filter_Status">
                                                <option value="Status" selected>Status (All)</option>
                                                <option value="Unconfirmed">Unconfirmed</option>
                                                <option value="Part Confirmed">Part Confirmed</option>
                                                <option value="Confirmed">Confirmed</option>
                                                <option value="Locked">Locked</option>
                                                <option value="Out Range">Out Range</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-between">
                                        <button class="btn btn-sm btn-primary" style="width: 80%" id="filter"><i class="fa-solid fa-arrow-down-small-big"></i> Filter</button>
                                        <button class="btn btn-sm btn-outline-secondary ms-3" id="filter-refresh"><i class="fa-sharp fa-regular fa-arrows-rotate"></i> Refresh</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="form-body">
                    <table id="table_Devices" class="table table-striped table-hover table-bordered text-nowrap">
                        <thead>
                            <tr>
                                <!-- 0 -->
                                <th>MTS</th>
                                <!-- 1 -->
                                <th>Product Name</th>
                                <!-- 2 -->
                                <th>Model</th>
                                <!-- 3 -->
                                <th>Station</th>
                                <!-- 4 -->
                                <th>PN</th>
                                <!-- 5 -->
                                <th>Description</th>
                                <!-- 6 -->
                                <th>Group</th>
                                <!-- 7 -->
                                <th>Vendor</th>
                                <!-- 8 -->
                                <th>Specification</th>
                                <!-- 10 -->
                                <th>Buffer</th>
                                <!-- 11 -->
                                <th>Quantity</th>
                                <!-- 12 -->
                                <th>Unit</th>
                                <!-- 13 -->
                                <th>Type</th>
                                <!-- 14 -->
                                <th>Status</th>
                                <!-- 15 -->
                                <th>Action</th>
                                <!-- 9 -->
                                <th>Location</th>
                            </tr>
                        </thead>
                        <tbody id="table_Devices_tbody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between align-items-center" style="height: 31px">
                    <h5 class="m-0">Devices Selected</h5>
                </div>
                <hr />
                <div class="form-body" id="form_device-select">
                </div>
            </div>
            <div class="card-footer text-center">
                <button type="button" class="btn btn-outline-primary" id="CreateBorrowForm">Create Borrow Request</button>
            </div>
        </div>
    </div>
</div>

<!-- Borrow Form modal -->
<div class="modal fade" id="borrow_form-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Borrow Request Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2 class="font-weight-light text-center text-primary py-3">BORROW REQUEST</h2>

                <div class="row">
                    <!-- row 1-->
                    <div class="col-md-3">
                        <label class="form-label">Card Id</label>
                        <input type="text" class="form-control" id="form_borrow-CardId" disabled>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control" id="form_borrow-Username" disabled>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Date Borrow</label>
                        <input type="datetime-local" class="form-control" id="form_borrow-BorrowDate">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Due Date</label>
                        <input type="datetime-local" class="form-control" id="form_borrow-DuaDate">
                    </div>
                    <!-- row 2-->
                    <div class="col-md-3 mt-3">
                        <label class="form-label">Use for Model</label>
                        <select class="form-select" id="form_borrow-Model"></select>
                    </div>
                    <div class="col-md-3 mt-3">
                        <label class="form-label">Use for Station</label>
                        <select class="form-select" id="form_borrow-Station"></select>
                    </div>
                    <!-- row 3-->
                    <div class="col-md-12 mt-3">
                        <label class="form-label">Note</label>
                        <textarea class="form-control" rows="3" style="resize: none" id="form_borrow-Note"></textarea>
                    </div>
                </div>

                <div class="mt-3">
                    <h4 class="font-weight-light text-center text-white py-3">DEVICES LIST</h4>
                    <table class="table table-bordered" id="table_borrow">
                        <thead>
                            <tr>
                                <th>PN</th>
                                <th>Description</th>
                                <th>Specification</th>
                                <th>Model</th>
                                <th>Station</th>
                                <th class="text-center">Unit</th>
                                <th class="text-danger text-center" style="width: 200px;">Quantity Borrow</th>
                            </tr>
                        </thead>
                        <tbody id="table_borrow-tbody">
                        </tbody>
                    </table>
                </div>

                <div class="container py-2">
                    <h4 class="font-weight-light text-center text-white py-3">SIGN PROCESS</h4>
                    <div id="sign-container">
                        <div class="row">
                            <!-- timeline item 1 left dot -->
                            <div class="col-auto text-center flex-column d-none d-sm-flex">
                                <div class="row h-50">
                                    <div class="col border-end">&nbsp;</div>
                                    <div class="col">&nbsp;</div>
                                </div>
                                <h5 class="m-2">
                                    <span class="badge rounded-pill bg-primary border">&nbsp;</span>
                                </h5>
                                <div class="row h-50">
                                    <div class="col">&nbsp;</div>
                                    <div class="col" style="padding-right: 14px;">&nbsp;</div>
                                </div>
                            </div>
                            <!-- timeline item 1 event content -->
                            <div class="col py-2">
                                <div class="card radius-15 card-sign">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <label class="form-label">Role</label>
                                                <input type="text" class="form-control form-control" value="Warehouse Manager" disabled>
                                            </div>
                                            <div class="col-md-7">
                                                <label class="form-label">User</label>
                                                <select class="form-select form-select" id="sign-WarehouseManagerUser" select-user></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center" btn-add-sign>
                        <button type="button" class="btn btn-outline-success px-5 border-0" id="btn_addSign"><i class="bx bx-plus"></i>New Sign</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button_send">Send Borrow Form</button>
            </div>
        </div>
    </div>
</div>

<!-- Details modal -->
<div class="modal fade" id="device_details-modal" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="device_details-title">Device Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Details -->
                <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">DEVICE DETAILS</h5>

                <!-- Basic Info -->
                <div class="card">
                    <div class="card-body">
                        <h6 class="mb-0 text-uppercase">Basic Information</h6>
                        <hr>

                        <div class="row">
                            <div class="col-6">
                                <!-- Id + Device Code-->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-4 input-group-text">ID</span>
                                            <input type="text" class="col-6 form-control" id="device_details-DeviceId" details disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-3 input-group-text" style="width: 135px">PN</span>
                                            <input class="form-control" type="text" id="device_details-DeviceCode" details disabled>
                                        </div>
                                    </div>
                                </div>
                                <!-- Device Name -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">Description</span>
                                    <input class="form-control" type="text" id="device_details-DeviceName" details disabled>
                                </div>
                                <!-- Specification -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">Specification</span>
                                    <input class="form-control" type="text" id="device_details-Specification" details disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <!-- Status + Type -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-6 input-group-text">Status</span>
                                            <input class="col-6 form-control" type="text" id="device_details-Status" details disabled />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-6 input-group-text">Type</span>
                                            <input class="col-6 form-control" type="text" id="device_details-Type" details disabled />
                                        </div>
                                    </div>
                                </div>
                                <!-- Device Date -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">Created date</span>
                                    <input class="form-control" type="datetime-local" id="device_details-DeviceDate" details disabled>
                                </div>

                                <!-- DeliveryTime -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">List Time</span>
                                    <input class="form-control" type="text" id="device_details-DeliveryTime" details disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Details Info-->
                <div class="card">
                    <div class="card-body">
                        <h6 class="mb-0 text-uppercase">Details Information</h6>
                        <hr>

                        <div class="row">
                            <div class="col-6">

                                <!-- WareHouse + Relation -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text">Warehouse</span>
                                            <input class="form-control" id="device_details-WareHouse" details disabled />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text">Relation</span>
                                            <input class="form-control" type="text" id="device_details-Relation" details disabled>
                                        </div>
                                    </div>
                                </div>

                                <!-- Buffer + LifeCycle-->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text">Buffer</span>
                                            <input class="form-control" type="number" id="device_details-Buffer" details disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text">Life Cycle</span>
                                            <input class="form-control" type="number" id="device_details-LifeCycle" details disabled>
                                        </div>
                                    </div>
                                </div>

                                <!-- Quantity  + Unit -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text">Quantity</span>
                                            <input class="form-control" type="number" id="device_details-Quantity" details disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text">Unit</span>
                                            <input class="form-control" type="text" id="device_details-Unit" details disabled>
                                        </div>
                                    </div>
                                </div>

                                <!-- QtyConfirm + RealQty -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text">Qty Confirm</span>
                                            <input class="form-control" type="number" id="device_details-QtyConfirm" details disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text fw-bold text-info">Real Quantity</span>
                                            <input class="form-control" type="number" id="device_details-RealQty" details disabled>
                                        </div>
                                    </div>
                                </div>

                                <!-- ACC_KIT + Type -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <span class="col-5 input-group-text">ACC KIT</span>
                                            <input class="form-control" type="text" id="device_details-AccKit" details disabled />
                                        </div>
                                    </div>
                                    <div class="col-6"></div>
                                </div>
                            </div>

                            <div class="col-6">
                                <!-- Group -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">Group</span>
                                    <input class="form-control" id="device_details-Group" type="text" details disabled />
                                </div>
                                <!-- Vendor -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">Vendor</span>
                                    <input class="form-control" id="device_details-Vendor" type="text" details disabled />
                                </div>
                                <!-- Product -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">Product</span>
                                    <input class="col-9 form-control" id="device_details-Product" type="text" details disabled />
                                </div>
                                <!-- Model -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">Model</span>
                                    <input class="col-9 form-control" id="device_details-Model" type="text" details disabled />
                                </div>
                                <!-- Station -->
                                <div class="input-group mb-3">
                                    <span class="col-3 input-group-text">Station</span>
                                    <input class="col-9 form-control" id="device_details-Station" type="text" details disabled />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Layout -->
                <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">DEVICE LOCATION</h5>
                <div>
                    <table class="table table-bordered" id="device_details-layout">
                        <thead>
                            <tr class="fw-bold" style="background-color: #3e464c">
                                <td>Factory</td>
                                <td>Factory Floor</td>
                                <td>Warehouse Manager</td>
                                <td>Warehouse</td>
                                <td>Line</td>
                                <td>Cell</td>
                                <td>Floor</td>
                            </tr>
                        </thead>
                        <tbody id="device_details-layout-tbody">
                        </tbody>
                    </table>
                </div>

                <!-- History -->
                <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">DEVICE HISTORY</h5>
                <div>
                    <table class="table table-bordered" id="device_details-history">
                        <thead>
                            <tr class="align-middle fw-bold" style="background-color: #3e464c">
                                <td>Type</td>
                                <td>Date Borrow</td>
                                <td>Date Return</td>
                                <td>User</td>
                                <td>For Model</td>
                                <td>For Station</td>
                                <td>Borrow Quantity</td>
                                <td>Status</td>
                                <td style="max-width: 200px;">Note</td>
                            </tr>
                        </thead>
                        <tbody id="device_details-history-tbody"></tbody>
                    </table>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>

    <script src="~/Areas/NVIDIA/Content/Vendor/MomentJs/moment.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/js/select2.min.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/BorrowManagement/js/BorrowDevice.js?v=@Guid.NewGuid()"></script>
    <script type="text/javascript">
        // Filter
        $(document).ready(function () {
            var dropdownOpen = false;
            $('#dropdown_filter').on('click', function (event) {
                event.stopPropagation();

                dropdownOpen = !dropdownOpen;

                if (dropdownOpen) {
                    $(this).addClass('show');
                } else {
                    $(this).removeClass('show');
                }
            });

            $(document).on('click', function (event) {
                if (dropdownOpen && !$(event.target).closest('#dropdown_filter').length) {
                    $('#dropdown_filter').removeClass('show');
                    dropdownOpen = false;
                }
            });
        });
        $('#filter_Product').select2({
            theme: 'bootstrap4',
            width: '75%',
        });
        $('#filter_Model').select2({
            theme: 'bootstrap4',
            width: '75%',
        });
        $('#filter_Vendor').select2({
            theme: 'bootstrap4',
            width: '75%',
        });
        $('#filter_Type').select2({
            theme: 'bootstrap4',
            width: '75%',
            minimumResultsForSearch: -1,
        });
        $('#filter_Station').select2({
            theme: 'bootstrap4',
            width: '75%',
        });
        $('#filter_Group').select2({
            theme: 'bootstrap4',
            width: '75%',
        });
        $('#filter_Status').select2({
            theme: 'bootstrap4',
            width: '75%',
            minimumResultsForSearch: -1,
        });
    </script>
}