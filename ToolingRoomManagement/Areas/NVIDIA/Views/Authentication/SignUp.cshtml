@{
    Layout = null;
}

<!doctype html>
<html lang="en" class="dark-theme">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->
    <link rel="icon" href="~/Areas/NVIDIA/Content/Image/favicon.ico" type="image/png" />
    <!-- loader-->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/css/bootstrap-extended.css" rel="stylesheet">
    <!-- Font -->
    <link href="~/Areas/NVIDIA/Content/Vendor/Font/font-roboto/font-roboto.css" rel="stylesheet" />
    <!-- Template -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/css/app.css" rel="stylesheet">
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/css/icons.css" rel="stylesheet">
    <title>Sign In – Tooling Room Management</title>

    <!-- Theme Style CSS -->
    <link rel="stylesheet" href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/css/dark-theme.css" />

    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Vendor/SweetAlert/swal.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2-bootstrap4.css" rel="stylesheet" />

    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/Authentication/css/SignUp.css?v=@Guid.NewGuid()" rel="stylesheet" />
</head>

<body>
    <!--wrapper-->
    <div class="wrapper">
        @*<div class="authentication-header"></div>*@
        <header class="login-header shadow">
            <nav class="navbar navbar-expand-lg navbar-light rounded fixed-top rounded-0 shadow-lg" style="background-color: #212529;">
                <div class="container-fluid">
                    <a class="navbar-brand" href="javascript:;" style="display: contents">
                        <img src="~/Areas/NVIDIA/Content/Image/fii-logo.jpg" width="60" alt="" />
                        <h4 class="logo-text">Tooling Room Management</h4>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent1">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <ul class="navbar-nav align-items-center">
                                    <li class="nav-item dropdown dropdown-large">
                                        <a class="nav-link dropdown-toggle dropdown-toggle-nocaret text-white" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class='bx bx-category'></i>
                                            Features
                                        </a>
                                        @Html.Partial("~/Areas/NVIDIA/Views/Shared/_IotSystem.cshtml")
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="https://mbdiot.efoxconn.com/AboutUs/Index"><i class='bx bx-user me-1'></i>About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="https://mbdiot.efoxconn.com:5555"><i class='bx bx-home-alt me-1'></i>Home</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="section-authentication-signin d-flex align-items-center justify-content-center my-5">
            <div class="container">
                <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-2">
                    <div class="col mx-auto">
                        <div class="card mt-5" id="card_SignIn">
                            <div class="card-body">
                                <div class="border p-4 rounded">
                                    <div class="text-center">
                                        <h3 class="">Sign Up</h3>
                                        <p>
                                            Already have an account? <a href="/NVIDIA/Authentication/SignIn">Sign in here</a>
                                        </p>
                                    </div>
                                    <div class="login-separater text-center mb-4">
                                        <span style="background: #171717;">OR SIGN UP WITH EMAIL</span>
                                        <hr />
                                    </div>
                                    <div class="form-body">
                                        <div class="row g-3">
                                            <div class="col-12">
                                                <label for="inputCardId" class="form-label">Card ID</label>
                                                <input type="email" class="form-control" id="inputCardId" placeholder="Your Card ID" maxlength="25" autocomplete="off">
                                            </div>
                                            <div class="col-12">
                                                <label for="inputEmail" class="form-label">Email Address</label>
                                                <input type="email" class="form-control" id="inputEmail" placeholder="example@mail.foxconn.com" maxlength="50" autocomplete="off">
                                            </div>
                                            <div class="col-12">
                                                <label for="inputCreatePassword" class="form-label">Create Password</label>
                                                <div class="input-group" id="show_hide_password">
                                                    <input type="password" class="form-control border-end-0" id="inputCreatePassword" placeholder="Enter Create Password" maxlength="25" autocomplete="off">
                                                    <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label for="inputConfirmPassword" class="form-label">Confirm Password</label>
                                                <div class="input-group" id="show_hide_password">
                                                    <input type="password" class="form-control border-end-0" id="inputConfirmPassword" placeholder="Enter Confirm Password" maxlength="25" autocomplete="off">
                                                    <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label for="inputSelectDepart" class="form-label">Department</label>
                                                <select class="form-select" id="inputSelectDepart">
                                                </select>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="CheckChecked">
                                                    <label class="form-check-label" for="CheckChecked">I read and agree to Terms & Conditions</label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button type="button" class="btn btn-primary" id="SignUp"><i class='bx bx-user'></i>Sign up</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end row-->
            </div>
        </div>
        <footer class="shadow-sm border-top p-2 text-center fixed-bottom" style="background-color: #212529;">
            <p class="mb-0">Copyright © 2023. MBD Automation IOT.</p>
        </footer>
    </div>
    <!--end wrapper-->
    <!-- Bootstrap JS -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/js/bootstrap.bundle.min.js"></script>
    <!--plugins-->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/js/jquery.min.js"></script>

    <!--app JS-->
    @*<script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/js/app.js"></script>*@
    <script src="~/Areas/NVIDIA/Content/Vendor/SweetAlert/swal.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/js/select2.min.js"></script>

    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/Authentication/js/SignUp.js?v=@Guid.NewGuid()"></script>
    <script>
        // Show pass
        $(document).ready(function () {
            $("#show_hide_password a").on('click', function (event) {
                event.preventDefault();
                if ($('#show_hide_password input').attr("type") == "text") {
                    $('#show_hide_password input').attr('type', 'password');
                    $('#show_hide_password i').addClass("bx-hide");
                    $('#show_hide_password i').removeClass("bx-show");
                } else if ($('#show_hide_password input').attr("type") == "password") {
                    $('#show_hide_password input').attr('type', 'text');
                    $('#show_hide_password i').removeClass("bx-hide");
                    $('#show_hide_password i').addClass("bx-show");
                }
            });
        });
        // Select 2 depart
        $('#inputSelectDepart').select2({
            theme: 'bootstrap4',
            minimumResultsForSearch: -1,
        });
    </script>
</body>

</html>

