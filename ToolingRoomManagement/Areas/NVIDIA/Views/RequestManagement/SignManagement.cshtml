@{
    ViewBag.Title = "Borrow - Return Sign";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";

    var newGuid = Guid.NewGuid();
}


@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Vendor/Viewer JS/viewer.min.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/RequestManagement/css/SignManagement.css?v=@newGuid" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Sign</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Request Handling</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row row-cols-1 row-cols-lg-4">
    <!-- Total Requests -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Total Request</p>
                        <h4 class="font-weight-bold" id="info-request"></h4>
                    </div>
                    <div class="widgets-icons bg-gradient-cosmic text-white">
                        <i class="bx bx-transfer-alt"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pending -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Pending</p>
                        <h4 class="font-weight-bold" id="info-pending"></h4>
                    </div>
                    <div class="widgets-icons bg-gradient-kyoto text-white">
                        <i class='bx bx-time'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Approved -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Approved</p>
                        <h4 class="font-weight-bold" id="info-approved"></h4>
                    </div>
                    <div class="widgets-icons bg-gradient-lush text-white">
                        <i class='bx bx-check'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Reject -->
    <div class="col">
        <div class="card card-info radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p class="mb-0">Rejected</p>
                        <h4 class="font-weight-bold" id="info-rejected"></h4>
                    </div>
                    <div class="widgets-icons bg-gradient-burning text-white">
                        <i class='bx bx-x'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Card table -->
<div class="card card-info" id="card-device-details">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <h5 class="m-0">Sign Requests</h5>
        </div>
        <hr />
        <div class="form-body mt-4">
            <table id="datatable" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <!-- 0 -->
                        <th>Code</th>
                        <!-- 1 -->
                        <th>Created By</th>
                        <!-- 2 -->
                        <th>Created Date</th>
                        <!-- 3 -->
                        <th>Note</th>
                        <!-- 4 -->
                        <th>Type</th>
                        <!-- 5 -->
                        <th>Status</th>
                        <!-- 6 -->
                        <th>Your Sign</th>
                        <!-- 7 -->
                        <th>Action</th>
                        <!-- 8 -->
                        <th>DevicesName</th>
                    </tr>
                </thead>
                <tbody id="datatable-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>



<!-- Request Details modal -->
@Html.Partial("~/Areas/NVIDIA/Views/RequestManagement/Modal/_RequestDetailsModal.cshtml")

<!-- Return Details modal -->
@Html.Partial("~/Areas/NVIDIA/Views/RequestManagement/Modal/_ReturnDetails.cshtml")

<!-- Export & Return NG Details modal -->
@Html.Partial("~/Areas/NVIDIA/Views/ExportManagement/_ExportDetailsModal.cshtml")

<!-- Device Details modal -->
@Html.Partial("~/Areas/NVIDIA/Views/DeviceManagement/_DeviceDetails_Modal.cshtml")

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Vendor/Viewer JS/viewer.min.js"></script>

    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/RequestManagement/js/RequestCommon.js?v=@newGuid"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/ExportManagement/_ExportCommon.js?v=@newGuid"></script>

    <script src="~/Areas/NVIDIA/Content/Custom/DeviceManagement/js/DeviceDetails.js?v=@newGuid"></script>

    <script src="~/Areas/NVIDIA/Content/Custom/RequestManagement/js/Sign/RequestSign.js?v=@newGuid"></script>

    <script src="~/Areas/NVIDIA/Content/Custom/RequestManagement/js/RequestDetails.js?v=@newGuid"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/RequestManagement/js/Return/ReturnDetails.js?v=@newGuid"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/ExportManagement/_ExportDetailsModal.js?v=@newGuid"></script>s
}