
@{
    ViewBag.Title = "Purchase Request";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";

    var newGuid = Guid.NewGuid();
}

@section styles{
    <!-- Plugin -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2-bootstrap4.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/PurchaseRequest/css/PurchaseRequest.css?v=@newGuid" rel="stylesheet" />

}

<!-- Breadcrumb -->
<section>
    <div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
        <div class="breadcrumb-title pe-3">Purchase Request</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="javascript:;">Request Handling</a>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<!-- Datatable -->
<section>
    <div class="card" id="card-device-details">
        <div class="card-body">
            <div class="card-title d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <h5 class="m-0 me-3 text-uppercase">Purchase Request Table</h5>
                </div>
            </div>

            <hr />
            <div class="form-body mt-4">
                <table id="PurchaseRequestDatatable" class="table table-striped table-hover table-bordered text-nowrap text-truncate align-middle w-100">
                    <thead>
                        <tr class="bg-secondary text-uppercase">
                            <!-- 0 -->
                            <th>ID</th>
                            <!-- 1 -->
                            <th>PNs</th>
                            <!-- 2 -->
                            <th>Code</th>
                            <!-- 3 -->
                            <th>User Request</th>
                            <!-- 4 -->
                            <th>Request Date</th>
                            <!-- 5 -->
                            <th>Required Date</th>
                            <!-- 6 -->
                            <th>Note</th>
                            <!-- 7 -->
                            <th>Days</th>
                            <!-- 8 -->
                            <th>Status</th>
                            <!-- 9 -->
                            <th>Type</th>
                            <!-- 10 -->
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Modal -->
<section>
    <!-- Create Modal -->
    @Html.Partial("~/Areas/NVIDIA/Views/RequestManagement/Modal/_CreatePurchaseRequestModal.cshtml")
    @Html.Partial("~/Areas/NVIDIA/Views/RequestManagement/Modal/_CreateNvidiaBuyModal.cshtml")

    <!-- Update Modal -->
    @Html.Partial("~/Areas/NVIDIA/Views/RequestManagement/Modal/_UpdatePurchaseRequestModal.cshtml")
</section>


@section scripts{
    <!-- Plugin -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/js/select2.min.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/PurchaseRequest/js/PurchaseRequestCommon.js"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/DeviceManagement/js/DeviceCommon.js"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/Common/js/UserCommon.js"></script>

    <script src="~/Areas/NVIDIA/Content/Custom/PurchaseRequest/js/PurchaseRequest.js?v=@newGuid"></script>

    <script src="~/Areas/NVIDIA/Content/Custom/PurchaseRequest/js/_CreateFxnBuy.js?v=@newGuid"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/PurchaseRequest/js/_CreateNvBuy.js?v=@newGuid"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/PurchaseRequest/js/_Update.js?v=@newGuid"></script>
    <script src="~/Areas/NVIDIA/Content/Custom/PurchaseRequest/js/_Delete.js?v=@newGuid"></script>

}