
@{
    ViewBag.Title = "Layout Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Vendor/jstree/jstree.bundle.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/Warehouse/css/Layout.css" rel="stylesheet" />
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Layout</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Warehouse</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card" style="width: 350px;">
    <div class="card-body">
        <div class="card-title">
            <h5 class="m-0">Layout</h5>
        </div>
        <hr />
        <div class="accordion" id="accordion_wh">
            <div class="input-group">
                <span class="input-group-text bg-transparent"><i class="bx bx-search"></i></span>
                <input type="text" class="form-control" placeholder="Search" id="search_Layout">
            </div>
            <div id="LayoutTree" class="mt-3">
            </div>
        </div>


    </div>
</div>



<!-- Layout modal -->
<div class="modal fade" id="layout_modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warehouse layout Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <button class="btn btn-outline-primary" onclick="AddNewLine()"><i class="fa-solid fa-plus"></i> New Line</button>
                </div>
                <div id="layout_modal-LineContainer">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button_send">Send Borrow Form</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Vendor/jstree/jstree.bundle.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/Warehouse/js/Layout.js"></script>
}
