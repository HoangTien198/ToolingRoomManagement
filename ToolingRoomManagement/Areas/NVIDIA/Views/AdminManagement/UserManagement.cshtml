
@{
    ViewBag.Title = "User Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/Admin/css/User/UserManagement.css" rel="stylesheet" />
}

<!-- Breadcrumb -->
<section>
    <div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
        <div class="breadcrumb-title pe-3">User Management</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a></li>
                    <li class="breadcrumb-item" aria-current="page">ADMIN</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<!-- Datatable -->
<section>
    <div class="card" id="card-device-details">
        <div class="card-body">
            <div class="card-title"><h5 class="m-0 me-3">Users Table</h5></div>
            <hr />
            <div class="form-body">
                <table id="user-datatable" class="table table-striped table-hover table-bordered text-nowrap">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Username</th>
                            <th>VN Name</th>
                            <th>CN Name</th>
                            <th>EN Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Create user modal -->
<section>
    <div class="modal fade" id="CreateUserModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">ADD USER MODAL</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Username <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="create-Username" maxlength="25">
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Password <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="create-Password" maxlength="25">
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Email</label>
                                <input type="text" class="form-control" id="create-Email" maxlength="50">
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Status</label>
                                <select class="form-select" id="create-Status">
                                    <option value="ACTIVE">Active</option>
                                    <option value="NO ACTIVE">No Active</option>
                                    <option value="LOCKED">Locked</option>
                                    <option value="DELETED">Deleted</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">VN Name</label>
                                <input type="text" class="form-control" id="create-VnName" maxlength="50">
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">CN Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="create-CnName" maxlength="50">
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">EN Name</label>
                                <input type="text" class="form-control" id="create-EnName" maxlength="50">
                            </div>
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Created Date</label>
                                <input type="datetime-local" class="form-control" id="create-CreatedDate">
                            </div>
                        </div>

                        <input type="hidden" id="create-HireDate" />
                        <input type="hidden" id="create-LeaveDate" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="CreateUserModal_Save" onclick="CreateUserModal_Save(this)">Save</button>
                </div>
            </div>
        </div>
    </div>
</section>

