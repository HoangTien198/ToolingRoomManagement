
@{
    ViewBag.Title = "User Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/admin/users/UserManagement.css" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">User Management</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a></li>
                <li class="breadcrumb-item" aria-current="page">ADMIN</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Card table -->
<div class="card" id="card-device-details">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <h5 class="m-0 me-3">Users Table</h5>
            </div>
        </div>

        <hr />
        <div class="form-body mt-4">
            <table id="datatable" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <!-- 0 -->
                        <th>Id</th>
                        <!-- 1 -->
                        <th>Username</th>
                        <!-- 2 -->
                        <th>Password</th>
                        <!-- 3 -->
                        <th>VN Name</th>
                        <!-- 4 -->
                        <th>CN Name</th>
                        <!-- 5 -->
                        <th>EN Name</th>
                        <!-- 6 -->
                        <th>Email</th>
                        <!-- 7 -->
                        <th>Status</th>
                        <!-- 8 -->
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="datatable-tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- ADD USER MODAL -->
<div class="modal fade" id="modal-AddUser" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">ADD USER MODAL</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Username <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="AddUser-Username" maxlength="25">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Password <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="AddUser-Password" maxlength="25">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" id="AddUser-Email" maxlength="50">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">VN Name</label>
                            <input type="text" class="form-control" id="AddUser-VnName" maxlength="50">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">CN Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="AddUser-CnName" maxlength="50">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">EN Name</label>
                            <input type="text" class="form-control" id="AddUser-EnName" maxlength="50">
                        </div>
                    </div>

                    <input type="hidden" id="AddUser-HireDate" />
                    <input type="hidden" id="AddUser-LeaveDate" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="modal-AddUser-Save">Save</button>
            </div>
        </div>
    </div>
</div>
<!-- UPDATE USER MODAL -->
<div class="modal fade" id="product-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Modal-HeadTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2 class="font-weight-light text-center text-primary py-3" id="Modal-BodyTitle"></h2>
                <div class="row">
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">MTS</label>
                            <input type="text" class="form-control" id="p-MTS" maxlength="25">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="p-ProductName" maxlength="255" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button_send">Save</button>
            </div>
        </div>
    </div>
</div>
<!-- DETAILS USER MODAL -->
<div class="modal fade" id="product-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Modal-HeadTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2 class="font-weight-light text-center text-primary py-3" id="Modal-BodyTitle"></h2>
                <div class="row">
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">MTS</label>
                            <input type="text" class="form-control" id="p-MTS" maxlength="25">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="p-ProductName" maxlength="255" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button_send">Save</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Vendor/MomentJs/moment.js"></script>

    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/admin/AdminCommon.js"></script>

    <script src="~/Areas/NVIDIA/Content/admin/users/UserManagement.js"></script>
}
