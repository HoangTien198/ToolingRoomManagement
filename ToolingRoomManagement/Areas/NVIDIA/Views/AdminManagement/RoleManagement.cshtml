
@{
    ViewBag.Title = "Role Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/admin/roles/RoleManagement.css" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Role Management</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a></li>
                <li class="breadcrumb-item" aria-current="page">ADMIN</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-4">
        <!-- Card table -->
        <div class="card" id="card-device-details">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between align-items-center">
                    <div class="d-flex">
                        <h5 class="m-0 me-3">Roles Table</h5>
                    </div>
                </div>

                <hr />
                <div class="form-body mt-4">
                    <table id="roledatatable" class="table table-striped table-hover table-bordered text-nowrap">
                        <thead>
                            <tr>
                                <!-- 0 -->
                                <th>Id</th>
                                <!-- 1 -->
                                <th>Role Name</th>
                                <!-- 2 -->
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="roledatatable-tbody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-8">
        <!-- Card table -->
        <div class="card" id="card-device-details">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between align-items-center">
                    <div class="d-flex">
                        <h5 class="m-0 me-3">Users Table</h5>
                    </div>
                </div>

                <hr />
                <div class="form-body mt-4">
                    <table id="userdatatable" class="table table-striped table-hover table-bordered text-nowrap">
                        <thead>
                            <tr>
                                <!-- 0 -->
                                <th>Id</th>
                                <!-- 1 -->
                                <th>Username</th>
                                <!-- 2 -->
                                <th>VN Name</th>
                                <!-- 3 -->
                                <th>CN Name</th>
                                <!-- 4 -->
                                <th>EN Name</th>
                                <!-- 5 -->
                                <th>Email</th>
                                <!-- 6 -->
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="userdatatable-tbody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>

    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/admin/AdminCommon.js?v=@Guid.NewGuid()"></script>

    <script src="~/Areas/NVIDIA/Content/admin/roles/RoleManagement.js"></script>
}


