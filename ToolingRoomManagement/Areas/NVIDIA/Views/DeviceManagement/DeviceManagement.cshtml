@{
    ViewBag.Title = "Device Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2-bootstrap4.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/DeviceManagement/css/DeviceManagement.css?v=@Guid.NewGuid()" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Management</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Device</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Card table -->
<div class="card" id="card-device-details">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <h5 class="m-0 me-3">Device Details</h5>
                <label class="text-secondary">(* Double click to view details)</label>
            </div>

            <div class="w-50 d-flex justify-content-end">
                <div class="input-group input-group-sm w-50">
                    <span class="col-5 input-group-text">Warehouse</span>
                    <select class="col-7 form-select" id="input_WareHouse"></select>
                </div>
                <div class="dropdown ms-3">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Filter"><i class="bx bx-filter"></i></button>
                    <div class="dropdown-menu" style="width:320px;">
                        <div class="row">
                            <div class="col-6">
                                <select class="form-select form-select-sm mb-3" id="filter_Product">
                                    <option value="" selected>Product</option>
                                </select>
                                <select class="form-select form-select-sm mb-3" id="filter_Model">
                                    <option value="" selected>Model</option>
                                </select>
                                <select class="form-select form-select-sm mb-3" id="filter_Station">
                                    <option value="" selected>Station</option>
                                </select>
                                <select class="form-select form-select-sm" id="filter_Group">
                                    <option value="" selected>Group</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <select class="form-select form-select-sm mb-3" id="filter_Vendor">
                                    <option value="" selected>Vendor</option>
                                </select>
                                <select class="form-select form-select-sm mb-3" id="filter_Type">
                                    <option value="Type" selected>Type</option>
                                    <option value="Static">Static</option>
                                    <option value="Dynamic">Dynamic</option>
                                    <option value="N/A">N/A </option>
                                </select>
                                <select class="form-select form-select-sm mb-3" id="filter_Status">
                                    <option value="Status" selected>Status</option>
                                    <option value="Unconfirmed">Unconfirmed</option>
                                    <option value="Part Confirmed">Part Confirmed</option>
                                    <option value="Confirmed">Part Confirmed</option>
                                    <option value="Locked">Locked</option>
                                    <option value="Out Range">Out Range</option>
                                </select>
                                <button class="btn btn-sm btn-outline-info radius-30 w-100" id="filter">Filter</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        <div class="form-body mt-4">
            <table id="table_Devices" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <th>MTS</th>
                        <th>Product Name</th>
                        <th>Model</th>
                        <th>Station</th>
                        <th>Device Code</th>
                        <th>Device Name</th>
                        <th>Group</th>
                        <th>Vendor</th>
                        <th>Location</th>
                        <th>Buffer</th>
                        <th>Quantity</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="table_Devices_tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Edit modal -->
<div class="modal fade" id="device_edit-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="device_edit-title">Update Device</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Details -->
                <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">DEVICE DETAILS</h5>
                <div class="row">
                    <div class="col-6">
                        <!-- Id --><!-- Status -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">ID</span>
                                    <input type="text" class="col-6 form-control" id="device_edit-DeviceId" disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Status</span>
                                    <select class="col-6 form-select" id="device_edit-Status">
                                        <option value="Unconfirmed">Unconfirmed</option>
                                        <option value="Part Confirmed">Part Confirmed</option>
                                        <option value="Confirmed">Confirmed</option>
                                        <option value="Locked">Locked</option>
                                        <option value="Out Range">Out Range</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- WareHouse --> <!-- Relation -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Warehouse</span>
                                    <select class="col-6 form-select" id="device_edit-WareHouse"></select>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Relation</span>
                                    <input class="col-6 form-control" type="text" id="device_edit-Relation">
                                </div>
                            </div>
                        </div>

                        <!-- Buffer --> <!-- LifeCycle -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Buffer</span>
                                    <input class="col-6 form-control" type="number" id="device_edit-Buffer">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Life Cycle</span>
                                    <input class="col-6 form-control" type="number" id="device_edit-LifeCycle">
                                </div>
                            </div>
                        </div>

                        <!-- Forcast --> <!-- Quantity -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Forcast</span>
                                    <input class="col-6 form-control" type="number" id="device_edit-Forcast">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Quantity</span>
                                    <input class="col-6 form-control" type="number" id="device_edit-Quantity">
                                </div>
                            </div>
                        </div>

                        <!-- QtyConfirm --> <!-- Real Qty -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Qty Confirm</span>
                                    <input class="form-control" type="number" id="device_edit-QtyConfirm">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Real Quantity</span>
                                    <input class="form-control" type="number" id="device_edit-RealQty">
                                </div>
                            </div>
                        </div>

                        <!-- ACC_KIT --> <!-- Type -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">ACC KIT</span>
                                    <select class="col-6 form-select" id="device_edit-AccKit">
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                        <option value="N/A">N/A</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Type</span>
                                    <select class="col-6 form-select" id="device_edit-Type">
                                        <option value="S">Static</option>
                                        <option value="D">Dynamic</option>
                                        <option value="#N/A">N/A</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Group --> <!-- Vendor -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Group</span>
                                    <select class="col-6 form-select" id="device_edit-Group"></select>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Vendor</span>
                                    <select class="col-6 form-select" id="device_edit-Vendor"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <!-- Device Code -->
                        <div class="input-group mb-3" style="height: 2.5rem;"></div>
                        <!-- Device Code -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Device Code</span>
                            <input class="col-6 form-control" type="text" id="device_edit-DeviceCode">
                        </div>
                        <!-- Device Name -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Device name</span>
                            <input class="col-6 form-control" type="text" id="device_edit-DeviceName">
                        </div>
                        <!-- Device Date -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Created date</span>
                            <input class="form-control" type="datetime-local" id="device_edit-DeviceDate">
                        </div>
                        <!-- Product -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Product</span>
                            <select class="col-9 form-select" id="device_edit-Product"></select>
                        </div>
                        <!-- Model -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Model</span>
                            <select class="col-9 form-select" id="device_edit-Model"></select>
                        </div>
                        <!-- Station -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Station</span>
                            <select class="col-9 form-select" id="device_edit-Station"></select>
                        </div>

                    </div>
                </div>

                <!-- Layout -->
                <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">DEVICE LOCATION</h5>
                <div id="layout-container"></div>
                <button type="button" class="btn btn-sm btn-outline-secondary w-100" id="new-layout"><i class="fa-solid fa-plus"></i> Add Layout</button>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button-save_modal">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Details modal -->
<div class="modal fade" id="device_details-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="device_details-title">Device Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Details -->
                <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">DEVICE DETAILS</h5>
                <div class="row">
                    <div class="col-6">
                        <!-- Id + Status-->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">ID</span>
                                    <input type="text" class="col-6 form-control" id="device_details-DeviceId" details disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Status</span>
                                    <input class="col-6 form-control" type="text" id="device_details-Status" details disabled />
                                </div>
                            </div>
                        </div>

                        <!-- WareHouse + Relation -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Warehouse</span>
                                    <input class="col-6 form-control" id="device_details-WareHouse" details disabled />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Relation</span>
                                    <input class="col-6 form-control" type="text" id="device_details-Relation" details disabled>
                                </div>
                            </div>
                        </div>
                        <!-- Buffer + LifeCycle-->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Buffer</span>
                                    <input class="col-6 form-control" type="number" id="device_details-Buffer" details disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Life Cycle</span>
                                    <input class="col-6 form-control" type="number" id="device_details-LifeCycle" details disabled>
                                </div>
                            </div>
                        </div>

                        <!-- Forcast + Quantity -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Forcast</span>
                                    <input class="col-6 form-control" type="number" id="device_details-Forcast" details disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Quantity</span>
                                    <input class="col-6 form-control" type="number" id="device_details-Quantity" details disabled>
                                </div>
                            </div>
                        </div>
                        <!-- QtyConfirm + RealQty -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Qty Confirm</span>
                                    <input class="col-6 form-control" type="number" id="device_details-QtyConfirm" details disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text fw-bold text-info">Real Quantity</span>
                                    <input class="col-6 form-control" type="number" id="device_details-RealQty" details disabled>
                                </div>
                            </div>
                        </div>
                        <!-- ACC_KIT + Type -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">ACC KIT</span>
                                    <input class="col-6 form-control" type="text" id="device_details-AccKit" details disabled />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Type</span>
                                    <input class="col-6 form-control" type="text" id="device_details-Type" details disabled />
                                </div>
                            </div>
                        </div>

                        <!-- Group + Vendor -->
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Group</span>
                                    <input class="col-6 form-control" id="device_details-Group" type="text" details disabled />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="col-6 input-group-text">Vendor</span>
                                    <input class="col-6 form-control" id="device_details-Vendor" type="text" details disabled />
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-6">
                        <!-- Device Code -->
                        <div class="input-group mb-3" style="height: 2.5rem;"></div>
                        <!-- Device Code -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Device Code</span>
                            <input class="col-9 form-control" type="text" id="device_details-DeviceCode" details disabled>
                        </div>
                        <!-- Device Name -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Device name</span>
                            <input class="col-9 form-control" type="text" id="device_details-DeviceName" details disabled>
                        </div>
                        <!-- Device Date -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Created date</span>
                            <input class="form-control" type="datetime-local" id="device_details-DeviceDate" details disabled>
                        </div>
                        <!-- Product -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Product</span>
                            <input class="col-9 form-control" id="device_details-Product" type="text" details disabled />
                        </div>
                        <!-- Model -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Model</span>
                            <input class="col-9 form-control" id="device_details-Model" type="text" details disabled />
                        </div>
                        <!-- Station -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Station</span>
                            <input class="col-9 form-control" id="device_details-Station" type="text" details disabled />
                        </div>
                    </div>

                    <!-- Layout -->
                    <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">DEVICE LOCATION</h5>
                    <div>
                        <table class="table table-bordered" id="device_details-layout">
                            <thead>
                                <tr class="fw-bold" style="background-color: #3e464c">
                                    <td>Factory</td>
                                    <td>Factory Floor</td>
                                    <td>Warehouse Manager</td>
                                    <td>Warehouse</td>
                                    <td>Line</td>
                                    <td>Floor</td>
                                    <td>Cell</td>
                                </tr>
                            </thead>
                            <tbody id="device_details-layout-tbody">
                            </tbody>
                        </table>
                    </div>

                    <!-- History -->
                    <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name">DEVICE HISTORY</h5>
                    <div>
                        <table class="table table-bordered" id="device_details-history">
                            <thead>
                                <tr class="align-middle fw-bold" style="background-color: #3e464c">
                                    <td>Type</td>
                                    <td>Date Borrow</td>
                                    <td>Date Return</td>
                                    <td>User</td>
                                    <td>For Model</td>
                                    <td>For Station</td>
                                    <td>Borrow Quantity</td>
                                    <td style="max-width: 200px;">Note</td>
                                </tr>
                            </thead>
                            <tbody id="device_details-history-tbody"></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="button-save_modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/Areas/NVIDIA/Content/Vendor/MomentJs/moment.js"></script>
    <script src="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/js/select2.min.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVIDIA/Content/Custom/DeviceManagement/js/DeviceManagement.js?v=@Guid.NewGuid()"></script>
    <script type="text/javascript">

        $('#device_edit-AccKit').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            minimumResultsForSearch: -1,
            width: '50%',
        });
        $('#device_edit-Type').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            minimumResultsForSearch: -1,
            width: '50%',
        });
        $('#device_edit-Status').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            minimumResultsForSearch: -1,
            width: '50%',
        });
        $('#device_edit-WareHouse').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            minimumResultsForSearch: -1,
            width: '50%',
        });
        $('#device_edit-Product').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            width: '60%',
        });
        $('#device_edit-Model').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            minimumResultsForSearch: -1,
            width: '60%',
        });
        $('#device_edit-Station').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            minimumResultsForSearch: -1,
            width: '60%',
        });
        $('#device_edit-Group').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            width: '50%',
        });
        $('#device_edit-Vendor').select2({
            theme: 'bootstrap4',
            dropdownParent: $("#device_edit-modal"),
            width: '50%',
        });
    </script>
}
