@{
    ViewBag.Title = "Device Management";
    Layout = "~/Areas/NVIDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/NVIDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2-bootstrap4.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVIDIA/Content/Custom/DeviceManagement/css/DeviceManagement.css?v=@Guid.NewGuid()" rel="stylesheet" />
}

<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center py-3">
    <div class="breadcrumb-title pe-3">Management</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/NVIDIA/Dashboard"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Device</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Card table -->
<div class="card" id="card-device-details">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <h5 class="m-0 me-3">Device Details</h5>
                <label class="text-secondary">(* Double click to view details)</label>
            </div>

            <div class="w-50 d-flex justify-content-end">
                <div class="input-group input-group-sm w-50">
                    <span class="col-5 input-group-text" title="Kho">Warehouse</span>
                    <select class="col-7 form-select form-select-sm" id="input_WareHouse"></select>
                </div>

                <div class="dropdown ms-3" id="dropdown_filter">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Lọc và tìm kiếm"><i class="bx bx-filter"></i></button>
                    <div class="dropdown-menu" style="width:600px;">
                        <div class="row">
                            <div class="col-6">
                                <!--Filter product -->
                                <div class="input-group input-group-sm mb-3" title="Chọn loại sản phẩm">
                                    <span class="col-3 input-group-text">Product</span>
                                    <select class="form-select form-select-sm" id="filter_Product">
                                        <option value="" selected>Product (All)</option>
                                    </select>
                                </div>
                                <!--Filter model -->
                                <div class="input-group input-group-sm mb-3" title="Chọn loại model">
                                    <span class="col-3 input-group-text">Model</span>
                                    <select class="form-select form-select-sm" id="filter_Model">
                                        <option value="" selected>Model (All)</option>
                                    </select>
                                </div>
                                <!--Filter station -->
                                <div class="input-group input-group-sm mb-3" title="Chọn loại trạm">
                                    <span class="col-3 input-group-text">Station</span>
                                    <select class="form-select form-select-sm" id="filter_Station">
                                        <option value="" selected>Station (All)</option>
                                    </select>
                                </div>
                                <!--Filter group -->
                                <div class="input-group input-group-sm mb-3" title="Chọn loại nhóm thiết bị">
                                    <span class="col-3 input-group-text">Group</span>
                                    <select class="form-select form-select-sm" id="filter_Group">
                                        <option value="" selected>Group (All)</option>
                                    </select>
                                </div>

                            </div>
                            <div class="col-6">
                                <!--Filter Vendor -->
                                <div class="input-group input-group-sm mb-3" title="Chọn nhà cung ứng">
                                    <span class="col-3 input-group-text">Vendor</span>
                                    <select class="form-select form-select-sm" id="filter_Vendor">
                                        <option value="" selected>Vendor (All)</option>
                                    </select>
                                </div>
                                <!--Filter Type -->
                                <div class="input-group input-group-sm mb-3" title="Chọn loại thiết bị">
                                    <span class="col-3 input-group-text">Type</span>
                                    <select class="form-select form-select-sm" id="filter_Type">
                                        <option value="Type" selected>Type (All)</option>
                                        <option value="N/A">N/A </option>
                                        <option value="Static">Static</option>
                                        <option value="Dynamic">Dynamic</option>
                                        <option value="Consign">Consign</option>
                                        <option value="Fixture">Fixture</option>
                                    </select>
                                </div>
                                <!--Filter Status -->
                                <div class="input-group input-group-sm mb-3" title="Chọn trạng thái thiết bị">
                                    <span class="col-3 input-group-text">Status</span>
                                    <select class="form-select form-select-sm" id="filter_Status">
                                        <option value="Status" selected>Status (All)</option>
                                        <option value="Unconfirmed">Unconfirmed</option>
                                        <option value="Part Confirmed">Part Confirmed</option>
                                        <option value="Confirmed">Confirmed</option>
                                        <option value="Locked">Locked</option>
                                        <option value="Out Range">Out Range</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-between">
                                <button class="btn btn-sm btn-primary" style="width: 80%" id="filter" title="Lọc thiết bị"><i class="fa-solid fa-arrow-down-small-big"></i> Filter</button>
                                <button class="btn btn-sm btn-outline-secondary ms-3" id="filter-refresh" title="Làm mới lọc (Quay về mặc định)"><i class="fa-sharp fa-regular fa-arrows-rotate"></i> Refresh</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        <div class="form-body mt-4">
            <table id="table_Devices" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <!-- 0 -->
                        <th>MTS</th>
                        <!-- 1 -->
                        <th>Product Name</th>
                        <!-- 2 -->
                        <th>Model</th>
                        <!-- 3 -->
                        <th>Station</th>
                        <!-- 4 -->
                        <th title="(Mã thiết bị)">PN</th>
                        <!-- 5 -->
                        <th title="(Tên thiết bị)">Description</th>
                        <!-- 6 -->
                        <th>Group</th>
                        <!-- 7 -->
                        <th>Vendor</th>
                        <!-- 8 -->
                        <th>Specification</th>
                        <!-- 9 -->
                        <th title="(Vị trí)">Location</th>
                        <!-- 10 -->
                        <th title="(Dự phòng - Đơn vị %)">Buffer</th>
                        <!-- 11 -->
                        <th title="BOM Quantity (Số lượng trong BOM)">BOM Qty</th>
                        <!-- 12 -->
                        <th title="PO Quantity (Số lượng đặt mua)">PO Qty</th>
                        <!-- 13 -->
                        <th title="Confirm Quantity (Số lượng đã xác nhận)">Confirm Qty</th>
                        <!-- 14 -->
                        <th title="Real Quantity (Số lượng thực tế)">Real Qty</th>
                        <!-- 15 -->
                        <th title="Đơn vị tính">Unit</th>
                        <!-- 16 -->
                        <th title="Khoảng Thời gian [đặt hàng - nhận hàng]">Lead Time</th>
                        <!-- 17 -->
                        <th title="Loại thiết bị">Type</th>
                        <!-- 18 -->
                        <th title="Trạng thái thiết bị">Status</th>
                        <!-- 19 -->
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="table_Devices_tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Edit modal -->
<div class="modal fade" id="device_edit-modal" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="device_edit-title" title="Câp nhật thiết bị">Update Device</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Details -->
                <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name" title="Thông tin chi tiết về thiết bị">DEVICE DETAILS</h5>

                <!-- Basic Info -->
                <div class="card">
                    <div class="card-body">
                        <h6 class="mb-0 text-uppercase" title="Thông tin cơ bản">Basic Information</h6>
                        <hr>

                        <div class="row">
                            <div class="col-6">
                                <!-- Id + Device Code-->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Id thiết bị trong hệ thống">
                                            <span class="col-4 input-group-text">ID</span>
                                            <input class="form-control" type="text" id="device_edit-DeviceId" disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Mã thiết bị">
                                            <span class="col-4 input-group-text">PN</span>
                                            <input class="form-control" type="text" id="device_edit-DeviceCode">
                                        </div>
                                    </div>
                                </div>
                                <!-- Device Name -->
                                <div class="input-group mb-3" title="Tên thiết bị">
                                    <span class="col-3 input-group-text">Description</span>
                                    <input class="form-control" type="text" id="device_edit-DeviceName">
                                </div>
                                <!-- Specification -->
                                <div class="input-group mb-3" title="Quy cách (thông số đặc biệt)">
                                    <span class="col-3 input-group-text">Specification</span>
                                    <input class="form-control" type="text" id="device_edit-Specification">
                                </div>
                            </div>
                            <div class="col-6">
                                <!-- Status + Type -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Trạng thái thiết bị">
                                            <span class="col-4 input-group-text">Status</span>
                                            <select class="form-select" id="device_edit-Status">
                                                <option value="Unconfirmed">Unconfirmed</option>
                                                <option value="Part Confirmed">Part Confirmed</option>
                                                <option value="Confirmed">Confirmed</option>
                                                <option value="Locked">Locked</option>
                                                <option value="Out Range">Out Range</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Loại thiết bị">
                                            <span class="col-4 input-group-text">Type</span>
                                            <select class="col-6 form-select" id="device_edit-Type">
                                                <option value="#N/A">N/A</option>
                                                <option value="S">Static</option>
                                                <option value="D">Dynamic</option>
                                                <option value="Consign">Consign</option>
                                                <option value="Fixture">Fixture</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <!-- Device Date -->
                                <div class="input-group mb-3" title="Ngày nhập thiết bị">
                                    <span class="col-3 input-group-text">Created date</span>
                                    <input class="form-control" type="datetime-local" id="device_edit-DeviceDate">
                                </div>
                                <!-- DeliveryTime -->
                                <div class="input-group mb-3" title="Khoảng thời gian [Đặt hàng - Giao hàng]">
                                    <span class="col-3 input-group-text">Lead Time</span>
                                    <input class="form-control" type="number" id="device_edit-DeliveryTime1">
                                    <select class="form-select" id="device_edit-DeliveryTime2">
                                        <option value="Day (Ngày)">Day (Ngày)</option>
                                        <option value="Week (Tuần)" selected>Week (Tuần)</option>
                                        <option value="Month (Tháng)">Month (Tháng)</option>
                                        <option value="Quarter (Quý)">Quarter (Quý)</option>
                                        <option value="Year (Năm)">Year (Năm)</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Details Info-->
                <div class="card">
                    <div class="card-body">
                        <h6 class="mb-0 text-uppercase" title="Thông tin chi tiết">Details Information</h6>
                        <hr>

                        <div class="row">
                            <div class="col-6">
                                <!-- WareHouse + Relation -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Kho">
                                            <span class="col-5 input-group-text">Warehouse</span>
                                            <select class="form-select" id="device_edit-WareHouse"></select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        @*<div class="input-group mb-3" title="Mối liên hệ">
                                            <span class="col-5 input-group-text">Relation</span>
                                            <input class="form-control" type="text" id="device_edit-Relation">
                                        </div>*@
                                    </div>
                                </div>

                                <!-- Buffer + LifeCycle-->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Dự phòng (%)">
                                            <span class="col-5 input-group-text">Buffer</span>
                                            <input class="form-control" type="number" id="device_edit-Buffer">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Số lần sử dụng">
                                            <span class="col-5 input-group-text">Life Cycle</span>
                                            <input class="form-control" type="number" id="device_edit-LifeCycle">
                                        </div>
                                    </div>
                                </div>

                                <!-- BOM Quantity  + PO Quantity -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Số lượng trong BOM">
                                            <span class="col-5 input-group-text">BOM Quantity</span>
                                            <input class="form-control" type="number" id="device_edit-Quantity">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Số lượng đặt mua">
                                            <span class="col-5 input-group-text">PO Quantity</span>
                                            <input class="form-control" type="number" id="device_edit-POQty">
                                        </div>
                                    </div>
                                </div>

                                <!-- QtyConfirm + RealQty -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Số lượng đã xác nhận">
                                            <span class="col-5 input-group-text">Confirm Quantity</span>
                                            <input class="form-control" type="number" id="device_edit-QtyConfirm">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Số lượng thực tế">
                                            <span class="col-5 input-group-text fw-bold text-info">Real Quantity</span>
                                            <input class="form-control" type="number" id="device_edit-RealQty">
                                        </div>
                                    </div>
                                </div>

                                <!-- Min Quantity + Unit -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Số lượng thấp nhất">
                                            <span class="col-5 input-group-text">Min Quantity</span>
                                            <input class="form-control" type="number" id="device_edit-MinQty">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3" title="Đơn vị tính">
                                            <span class="col-5 input-group-text">Unit</span>
                                            <input class="form-control" type="text" id="device_edit-Unit" list="device_edit-Unit_List" maxlength="50">
                                            <datalist id="device_edit-Unit_List">
                                                <option value="N/A">N/A</option>
                                                <option value="PCS">PCS (Cái)</option>
                                                <option value="BAG">BAG (Bao)</option>
                                                <option value="BOX">BOX (Hộp)</option>
                                                <option value="SET">SET (Bộ)</option>
                                                <option value="M">M (Meter)</option>
                                                <option value="CM">CM (Centimet)</option>
                                                <option value="KG">KG (Kilogram)</option>
                                                <option value="G">G (Gram)</option>
                                                <option value="L">L (Liter)</option>
                                                <option value="ML">ML (Mililiter)</option>
                                            </datalist>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-6">
                                <!-- Product -->
                                <div class="input-group mb-3" title="Tên sản phẩm">
                                    <span class="col-3 input-group-text">Product</span>
                                    <input class="form-control" type="text" id="device_edit-Product" list="device_edit-Product-List" />
                                    <datalist id="device_edit-Product-List"></datalist>
                                    @*<select class="col-9 form-select" id="device_edit-Product"></select>*@
                                </div>
                                <!-- Model -->
                                <div class="input-group mb-3" title="Tên model">
                                    <span class="col-3 input-group-text">Model</span>
                                    <input class="form-control" type="text" id="device_edit-Model" list="device_edit-Model-List" />
                                    <datalist id="device_edit-Model-List"></datalist>
                                    @*<select class="col-9 form-select" id="device_edit-Model"></select>*@
                                </div>
                                <!-- Station -->
                                <div class="input-group mb-3" title="Tên trạm">
                                    <span class="col-3 input-group-text">Station</span>
                                    <input class="form-control" type="text" id="device_edit-Station" list="device_edit-Station-List" />
                                    <datalist id="device_edit-Station-List"></datalist>
                                    @*<select class="col-9 form-select" id="device_edit-Station"></select>*@
                                </div>
                                <!-- Group -->
                                <div class="input-group mb-3" title="Nhóm thiết bị">
                                    <span class="col-3 input-group-text">Group</span>
                                    <input class="form-control" type="text" id="device_edit-Group" list="device_edit-Group-List" />
                                    <datalist id="device_edit-Group-List"></datalist>
                                    @*<select class="col-6 form-select" id="device_edit-Group"></select>*@
                                </div>
                                <!-- Vendor -->
                                <div class="input-group mb-3" title="Nhà cung ứng">
                                    <span class="col-3 input-group-text">Vendor</span>
                                    <input class="form-control" type="text" id="device_edit-Vendor" list="device_edit-Vendor-List" />
                                    <datalist id="device_edit-Vendor-List"></datalist>
                                    @*<select class="col-6 form-select" id="device_edit-Vendor"></select>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Layout -->
                <h5 class="font-weight-light text-center text-primary py-3" id="borrow_modal-name" title="Vị trí thiết bị">DEVICE LOCATION</h5>
                <div id="layout-container"></div>
                <button type="button" class="btn btn-sm btn-outline-secondary w-100" id="new-layout" title="Thêm vị trí"><i class="fa-solid fa-plus"></i> Add Layout</button>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" title="Đóng">Close</button>
                <button type="button" class="btn btn-primary" id="button-save_modal" title="Lưu thay đổi">Save changes</button>
            </div>
        </div>
    </div>
</div>

