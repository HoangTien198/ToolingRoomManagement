
@{
    ViewBag.Title = "New Device Automation";
    Layout = "~/Areas/NVDIA/Views/Shared/_NvidiaLayoutShared.cshtml";
}

@section styles{
    <!-- Vendor -->
    <link href="~/Areas/NVDIA/Content/Vendor/UploadAreaDropzone/UploadAreaDropzone.css" rel="stylesheet" />
    <link href="~/Areas/NVDIA/Content/Template/Sysadmin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/Areas/NVDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/NVDIA/Content/Template/Sysadmin/assets/plugins/select2/css/select2-bootstrap4.css" rel="stylesheet" />
    <!-- Custom -->
    <link href="~/Areas/NVDIA/Content/Custom/DeviceManagement/css/AddDeviceAuto.css" rel="stylesheet" />
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Device</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">New Device Automation</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body p-4">
        <div class="form-body">
            <div class="row">
                <div class="col-lg-7">
                    <div class="border border-3 p-3 rounded">
                        <div class="">
                            <h6 class="mb-0 text-uppercase">BOM File Upload</h6>
                            <hr>
                            <!-- WareHouse -->
                            <div class="input-group mb-3 w-50">
                                <span class="col-5 input-group-text">Warehouse</span>
                                <select class="col-7 form-select" id="input_WareHouse"></select>
                            </div>
                            <!-- Upload Area -->
                            <div id="uploadArea" class="upload-area">
                                <!-- Header -->
                                <div class="upload-area__header">
                                    <h1 class="upload-area__title"></h1>
                                </div>
                                <!-- End Header -->
                                <!-- Drop Zoon -->
                                <div id="dropZoon" class="upload-area__drop-zoon drop-zoon">
                                    <span class="drop-zoon-close_icon">
                                        <i class='bi bi-x'></i>
                                    </span>
                                    <span class="drop-zoon__icon">
                                        <i class='bx bxs-file-image'></i>
                                    </span>
                                    <p class="drop-zoon__paragraph"><b>Drop</b> BOM file here or <b>Click</b> to select</p>
                                    <span id="loadingText" class="drop-zoon__loading-text">Please Wait</span>
                                    <img src="~/Areas/NVDIA/Content/Vendor/UploadAreaDropzone/Excel_Icon.svg" alt="Preview Image" id="previewImage" class="drop-zoon__preview-image" draggable="false" />
                                    <input type="file" id="fileInput" class="drop-zoon__file-input" accept=".xls, .xlsx">
                                </div>
                                <!-- End Drop Zoon -->
                                <!-- File Details -->
                                <div id="fileDetails" class="upload-area__file-details file-details">
                                    <div id="uploadedFile" class="uploaded-file">
                                        <div class="uploaded-file__icon-container">
                                            <i class='bx bxs-file-blank uploaded-file__icon'></i>
                                            <span class="uploaded-file__icon-text"></span> <!-- Data Will be Comes From Js -->
                                        </div>

                                        <div id="uploadedFileInfo" class="uploaded-file__info">
                                            <span class="uploaded-file__name"></span>
                                            <span class="uploaded-file__counter" id="process_count">0%</span>
                                            <div class="uploaded-file__info-process" id="process_bar"></div>
                                        </div>

                                    </div>
                                </div>
                                <!-- End File Details -->
                            </div>
                            <!-- End Upload Area -->

                        </div>
                    </div>
                </div>

                <div class="col-lg-5" id="bom-info" style="display: block">
                    <div class="border border-3 p-3 rounded">
                        <h6 class="mb-0 text-uppercase">BOM File Information</h6>
                        <hr>
                        <div class="row g-3">
                            <div class="col-6">
                                <label for="inputProductType" class="form-label">Products</label>
                                <input type="text" class="form-control" id="info_products" disabled>
                            </div>
                            <div class="col-6">
                                <label for="inputProductType" class="form-label">Groups</label>
                                <input type="text" class="form-control" id="info_groups" disabled>
                            </div>
                            <div class="col-6">
                                <label for="inputProductType" class="form-label">Models</label>
                                <input type="text" class="form-control" id="info_models" disabled>
                            </div>
                            <div class="col-6">
                                <label for="inputProductType" class="form-label">Vendors</label>
                                <input type="text" class="form-control" id="info_vendors" disabled>
                            </div>
                            <div class="col-6">
                                <label for="inputProductType" class="form-label">Stations</label>
                                <input type="text" class="form-control" id="info_stations" disabled>
                            </div>
                            <div class="col-6">
                                <label for="inputProductType" class="form-label">Devices</label>
                                <input type="text" class="form-control" id="info_devices" disabled>
                            </div>
                            <div class="col-12">
                                <label for="inputProductType" class="form-label">Total Quantity</label>
                                <input type="text" class="form-control" id="info_quantity" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--end row-->
        </div>
    </div>
</div>

<div class="card" id="card-device-details" style="display: none">
    <div class="card-body">
        <h5 class="card-title">Device Details</h5>
        <hr />
        <div class="form-body mt-4">
            <table id="table_addDevice" class="table table-striped table-hover table-bordered text-nowrap">
                <thead>
                    <tr>
                        <th>Device Code</th>
                        <th>Device Name</th>
                        <th>Group</th>
                        <th>Vendor</th>
                        <th>Buffer</th>
                        <th>Quantity</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="table_addDevice_tbody">
                </tbody>
            </table>
        </div>
    </div>

</div>

<div class="modal fade" id="device-edit_modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="device-edit_title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Id -->
                <div class="col-3">
                    <div class="input-group mb-3">
                        <span class="input-group-text">ID</span>
                        <input type="text" class="form-control" id="device-edit_DeviceId" disabled>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <!-- Device Code -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Device Code</span>
                            <input class="col-9 form-control" type="text" id="device-edit_DeviceCode" disabled>
                        </div>
                        <!-- Device Name -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Device name</span>
                            <input class="col-9 form-control" type="text" id="device-edit_DeviceName">
                        </div>
                        <!-- Device Date -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Created date</span>
                            <input class="col-9 form-control" type="datetime-local" id="device-edit_DeviceDate">
                        </div>
                        <!-- Buffer -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Buffer</span>
                            <input class="col-9 form-control" type="number" id="device-edit_Buffer">
                        </div>
                        <!-- Quantity -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Quantity</span>
                            <input class="col-9 form-control" type="number" id="device-edit_Quantity">
                        </div>

                    </div>
                    <div class="col-6">
                        <!-- Type -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Type</span>
                            <select class="col-9 form-select" id="device-edit_Type">
                                <option value="S">Static</option>
                                <option value="D">Dynamic</option>
                                <option value="#N/A">N/A</option>
                            </select>
                        </div>
                        <!-- Status -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Status</span>
                            <select class="col-9 form-select" id="device-edit_Status">
                                <option value="New">New</option>
                                <option value="Update">Update</option>
                                <option value="Confirmed">Confirmed</option>
                                <option value="Locked">Locked</option>
                                <option value="Depleted">Depleted</option>
                            </select>
                        </div>
                        <!-- WareHouse -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Warehouse</span>
                            <select class="col-9 form-select" id="device-edit_WareHouse"></select>
                        </div>
                        <!-- Group -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Group</span>
                            <select class="col-9 form-select" id="device-edit_Group"></select>
                        </div>
                        <!-- Vendor -->
                        <div class="input-group mb-3">
                            <span class="col-3 input-group-text">Vendor</span>
                            <select class="col-9 form-select" id="device-edit_Vendor"></select>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="button-save_modal">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <!-- Vendor -->
    <script src="~/Areas/NVDIA/Content/Vendor/UploadAreaDropzone/UploadAreaDropzone.js"></script>
    <script src="~/Areas/NVDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/NVDIA/Content/Template/Sysadmin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/Areas/NVDIA/Content/Vendor/MomentJs/moment.js"></script>
    <script src="~/Areas/NVDIA/Content/Template/Sysadmin/assets/plugins/select2/js/select2.min.js"></script>
    <!-- Custom -->
    <script src="~/Areas/NVDIA/Content/Custom/DeviceManagement/js/AddDeviceAuto.js"></script>
    <script type="text/javascript">
        $('#input_WareHouse').select2({
            theme: 'bootstrap4',
        });
        $('#device-edit_WareHouse').select2({
            theme: 'bootstrap4',
        });
        $('#device-edit_Group').select2({
            theme: 'bootstrap4',
        });
        $('#device-edit_Vendor').select2({
            theme: 'bootstrap4',
        });      
    </script>
}

